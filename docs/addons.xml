<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.aiostreams" name="AIOStreams" version="3.5.58" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AIOStreams addon for Kodi with advanced features</summary>
        <description lang="en_GB">Search and stream content from AIOStreams with comprehensive Trakt integration, stream quality filtering, reliability tracking, UI enhancements (color coding, progress bars), content discovery, keyboard shortcuts, and maintenance tools. Features dynamic context menus, smart stream sorting, and preference learning.</description>
        <platform>all</platform>
        <license>MIT</license>
        <website>https://aiostreams.shiggsy.co.uk</website>
        <news>v3.5.58: New release.</news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon id="repository.aiostreams" name="AIOStreams Repository" version="1.0.0" provider-name="AIOStreams">
    <extension point="xbmc.addon.repository" name="AIOStreams Repository">
	<dir>
    	    <info compressed="false">https://shiggsy365.github.io/AIOStreamsKODI/addons.xml</info>
    	    <checksum>https://shiggsy365.github.io/AIOStreamsKODI/addons.xml.md5</checksum>
    	    <datadir zip="true">https://shiggsy365.github.io/AIOStreamsKODI/</datadir>
	</dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>AIOStreams Addon Repository</summary>
        <description>Official repository for AIOStreams Kodi addon with automatic updates</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
</addons>