<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.aiostreams" name="AIOStreams Repository" version="1.1.29" provider-name="AIOStreams">
    <extension point="xbmc.addon.repository" name="AIOStreams Repository">
        <dir>
            <info compressed="false">https://shiggsy365.github.io/AIOStreamsKODI/repository.aiostreams/zips/addons.xml</info>
            <checksum>https://shiggsy365.github.io/AIOStreamsKODI/repository.aiostreams/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://shiggsy365.github.io/AIOStreamsKODI/repository.aiostreams/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>AIOStreams Addon Repository</summary>
        <description>Official repository for AIOStreams Kodi addon with automatic updates</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>

<addon id="plugin.video.aiostreams" name="AIOStreams" version="1.1.281" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login" />
    <!-- Global Search Provider -->
    <extension point="xbmc.python.script" library="globalsearch.py">
        <provides>executable</provides>
    </extension>
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="context_trailer.py">
                <label>Play Trailer</label>
                <visible>!String.IsEmpty(ListItem.Trailer)</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AIOStreams addon for Kodi with advanced features</summary>
        <description lang="en_GB">Search and stream content from AIOStreams.</description>
        <platform>all</platform>
        <license>MIT</license>
        <news>v1.1.27: Absolute Alignment &amp; Integrity Fix.</news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon id="plugin.video.imvdb" name="IMVDb Music Videos" version="1.0.136" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
        <import addon="plugin.video.youtube" version="6.8.18"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Browse music videos by year from IMVDb</summary>
        <description lang="en_GB">Discover the most iconic music videos from any year starting from 1970, powered by the IMVDb Data API. Randomized playback with lazy loading.</description>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

<addon id="script.aiodi.onboarding" name="AIODI Onboarding Wizard" version="1.0.143" provider-name="You">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="1.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Onboarding Wizard for AIODI Skin</summary>
        <description lang="en_GB">Configures AIOStreams, YouTube, Trakt, IMVDb, and IPTV Simple Client on first run.</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

