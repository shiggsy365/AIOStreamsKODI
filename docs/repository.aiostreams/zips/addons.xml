<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.aiostreams" name="AIOStreams" version="3.5.64" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AIOStreams addon for Kodi with advanced features</summary>
        <description lang="en_GB">Search and stream content from AIOStreams with comprehensive Trakt integration, stream quality filtering, reliability tracking, UI enhancements (color coding, progress bars), content discovery, keyboard shortcuts, and maintenance tools. Features dynamic context menus, smart stream sorting, and preference learning.</description>
        <platform>all</platform>
        <license>MIT</license>
        <website>https://aiostreams.shiggsy.co.uk</website>
        <news>v3.5.64: New release.</news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon id="repository.aiostreams" name="AIOStreams Repository" version="1.0.0" provider-name="AIOStreams">
    <extension point="xbmc.addon.repository" name="AIOStreams Repository">
	<dir>
    	    <info compressed="false">https://github.com/shiggsy365/AIOStreamsKODI/raw/refs/heads/main/docs/repository.aiostreams/zips/addons.xml</info>
    	    <checksum>https://github.com/shiggsy365/AIOStreamsKODI/raw/refs/heads/main/docs/repository.aiostreams/zips/addons.xml.md5</checksum>
    	    <datadir zip="true">https://github.com/shiggsy365/AIOStreamsKODI/raw/refs/heads/main/docs/repository.aiostreams/zips/</datadir>
	</dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>AIOStreams Addon Repository</summary>
        <description>Official repository for AIOStreams Kodi addon with automatic updates</description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
<addon id="skin.aiodi" version="1.0.0" name="AIODI - AIOStreams Integrated Skin" provider-name="shiggsy365">
    <requires>
        <import addon="xbmc.gui" version="5.16.0"/>
        <import addon="plugin.video.aiostreams" version="1.5.0"/>
        <import addon="script.module.requests" version="2.31.0"/>
    </requires>
    <extension point="xbmc.gui.skin" debugging="false">
        <res width="1920" height="1080" aspect="16:9" default="true" folder="1080i"/>
    </extension>
    <extension point="xbmc.service" library="service.py">
        <provides>service</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AIOStreams Integrated Dynamic Interface</summary>
        <description lang="en_GB">AIODI is a custom Kodi skin designed specifically for AIOStreams with deep integration, dynamic widget management, and a clean Netflix-style interface. Features include customizable home widgets, Trakt integration, and seamless content browsing without navigating through addon menus.</description>
        <platform>all</platform>
        <license>Creative Commons Attribution Non-Commercial Share-Alike 4.0</license>
        <forum></forum>
        <website>https://github.com/shiggsy365/AIOStreamsKODI</website>
        <source>https://github.com/shiggsy365/AIOStreamsKODI</source>
        <assets>
            <icon>media/icon.png</icon>
            <fanart>media/fanart.jpg</fanart>
            <screenshot>media/screenshots/home.jpg</screenshot>
        </assets>
    </extension>
</addon>
</addons>