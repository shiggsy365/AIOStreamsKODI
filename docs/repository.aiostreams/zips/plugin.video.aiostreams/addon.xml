<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.aiostreams" name="AIOStreams" version="1.1.146" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login" />
    <!-- Global Search Provider -->
    <extension point="xbmc.python.script" library="globalsearch.py">
        <provides>executable</provides>
    </extension>
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="context_trailer.py">
                <label>Play Trailer</label>
                <visible>!String.IsEmpty(ListItem.Trailer)</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AIOStreams addon for Kodi with advanced features</summary>
        <description lang="en_GB">Search and stream content from AIOStreams.</description>
        <platform>all</platform>
        <license>MIT</license>
        <news>v1.1.27: Absolute Alignment &amp; Integrity Fix.</news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>