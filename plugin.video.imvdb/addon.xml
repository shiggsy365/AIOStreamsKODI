<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.imvdb" name="IMVDb Music Videos" version="1.0.248" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.25.1"/>
        <import addon="plugin.video.youtube" version="6.8.18"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Browse music videos by year from IMVDb</summary>
        <description lang="en_GB">Discover the most iconic music videos from any year starting from 1970, powered by the IMVDb Data API. Randomized playback with lazy loading.</description>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
