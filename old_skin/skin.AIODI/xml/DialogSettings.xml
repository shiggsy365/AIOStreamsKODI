<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- Dimmer -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture colordiffuse="C0000000">colors/black.png</texture>
		</control>

		<!-- Right Side Panel (Width 700) -->
		<control type="group">
			<left>1220</left> <!-- 1920 - 700 -->
			<top>0</top>
			<width>700</width>
			<height>1080</height>
			<animation type="WindowOpen">
				<effect type="slide" start="700" end="0" time="300" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="700" time="300" tween="cubic" easing="in" />
			</animation>

			<!-- Bg -->
			<control type="image">
				<width>700</width>
				<height>1080</height>
				<texture colordiffuse="FF1A1A1A">colors/white.png</texture>
			</control>
			<control type="image">
				<left>-5</left>
				<width>5</width>
				<height>1080</height>
				<texture colordiffuse="FF000000">colors/white.png</texture>
			</control>

			<!-- Settings Grouplist -->
			<control type="grouplist" id="5">
				<description>control area</description>
				<left>25</left>
				<top>50</top>
				<width>650</width>
				<height>1000</height>
				<pagecontrol>60</pagecontrol>
				<onleft>9000</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<itemgap>0</itemgap>
			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="60">
				<left>680</left>
				<top>50</top>
				<width>12</width>
				<height>1000</height>
				<orientation>vertical</orientation>
				<onleft>5</onleft>
				<onright>9000</onright>
			</control>

			<!-- Setting Controls (definitions referenced by grouplist) -->
			<control type="button" id="7">
				<description>Default Button</description>
				<include>DefaultSettingButton</include>
				<width>650</width>
			</control>
			<control type="radiobutton" id="8">
				<description>Default RadioButton</description>
				<include>DefaultSettingButton</include>
				<width>650</width>
				<textwidth>500</textwidth>
			</control>
			<control type="spincontrolex" id="9">
				<description>Default SpinControlex</description>
				<include>DefaultSettingButton</include>
				<width>650</width>
			</control>
			<control type="image" id="11">
				<description>separator image</description>
				<height>3</height>
				<width>650</width>
				<texture colordiffuse="AAAAAAAA" border="3">dialogs/separator-grey.png</texture>
			</control>
			<control type="edit" id="12">
				<include>DefaultSettingButton</include>
				<width>650</width>
			</control>
			<control type="sliderex" id="13">
				<description>Default Slider</description>
				<include>DefaultSettingButton</include>
				<width>650</width>
				<textwidth>350</textwidth>
			</control>
			<control type="label" id="14">
				<description>Default Label</description>
				<include>DefaultSettingLabel</include>
				<width>650</width>
			</control>
			
			<!-- Dialog Buttons (OK/Cancel) -->
			<!-- Wait, DialogSettings usually has side buttons. -->
			<!-- I'll put them at the top or float them? -->
			<!-- Using ID 9000 for button group -->
			<control type="grouplist" id="9000">
				<left>25</left>
				<bottom>20</bottom>
				<orientation>horizontal</orientation>
				<width>650</width>
				<height>80</height>
				<itemgap>10</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<include content="DefaultDialogButton">
					<param name="id" value="28" />
					<param name="label" value="" />
					<param name="width" value="200" />
				</include>
				<include content="DefaultDialogButton">
					<param name="id" value="29" />
					<param name="label" value="" />
					<param name="width" value="200" />
				</include>
				<include content="DefaultDialogButton">
					<param name="id" value="30" />
					<param name="label" value="" />
					<param name="width" value="200" />
				</include>
			</control>
		</control>
	</controls>
</window>
