<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <coordinates>
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </coordinates>

    <controls>
        <!-- Background Group -->
        <control type="group">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>

            <!-- Fallback Black Background -->
            <control type="image">
                <texture>white.png</texture>
                <colordiffuse>FF000000</colordiffuse>
            </control>

            <!-- Fanart Background -->
            <control type="image">
                <texture background="true">$INFO[Window().Property(item.art.fanart)]</texture>
                <colordiffuse>66FFFFFF</colordiffuse>
            </control>

            <!-- Dark Overlay -->
            <control type="image">
                <texture background="true">white.png</texture>
                <colordiffuse>CC000000</colordiffuse>
            </control>
        </control>

        <!-- Clearlogo -->
        <control type="image">
            <animation type="WindowOpen">
                <effect type="slide" start="841,401" time="350" tween="cubic" easing="in"/>
                <effect type="zoom" start="140,140" time="350" center="auto" tween="cubic" easing="in"/>
            </animation>
            <animation effect="fade" end="0" time="350" tween="cubic" easing="in">WindowClose</animation>
            <top>20</top>
            <left>40</left>
            <width>200</width>
            <height>78</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[Window().Property(item.art.clearlogo)]</texture>
            <visible>!String.IsEmpty(Window().Property(item.art.clearlogo))</visible>
        </control>

        <!-- Title Label (if no clearlogo) -->
        <control type="label">
            <top>40</top>
            <left>100</left>
            <width>1720</width>
            <height>60</height>
            <font>font30</font>
            <textcolor>FFFFFFFF</textcolor>
            <align>center</align>
            <label>$INFO[Window().Property(item.info.title)]</label>
            <visible>String.IsEmpty(Window().Property(item.art.clearlogo))</visible>
        </control>

        <!-- Stream List -->
        <control type="list" id="2000">
            <animation effect="slide" start="-1400,0" time="350" tween="cubic" easing="in">WindowOpen</animation>
            <animation effect="slide" end="-1400,0" time="350" tween="cubic" easing="in">WindowClose</animation>
            <top>150</top>
            <left>100</left>
            <width>1720</width>
            <height>800</height>
            <onup>2000</onup>
            <ondown>2000</ondown>
            <itemgap>10</itemgap>
            
            <!-- Unfocused Item Layout -->
            <itemlayout height="80">
                <control type="group">
                    <!-- Background Card -->
                    <control type="image">
                        <top>5</top>
                        <width>1720</width>
                        <height>70</height>
                        <texture>white.png</texture>
                        <colordiffuse>44FFFFFF</colordiffuse>
                    </control>
                    
                    <!-- Stream Label -->
                    <control type="label">
                        <left>20</left>
                        <top>5</top>
                        <width>1680</width>
                        <height>70</height>
                        <font>font13</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </control>
            </itemlayout>
            
            <!-- Focused Item Layout -->
            <focusedlayout height="80">
                <control type="group">
                    <!-- Highlight Background -->
                    <control type="image">
                        <top>5</top>
                        <width>1720</width>
                        <height>70</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF1E90FF</colordiffuse>
                    </control>
                    
                    <!-- Stream Label (Black text on highlighted) -->
                    <control type="label">
                        <left>20</left>
                        <top>5</top>
                        <width>1680</width>
                        <height>70</height>
                        <font>font13</font>
                        <textcolor>FF000000</textcolor>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- Instructions Label -->
        <control type="label">
            <top>970</top>
            <left>100</left>
            <width>1720</width>
            <height>40</height>
            <font>font12</font>
            <textcolor>88FFFFFF</textcolor>
            <align>center</align>
            <label>Select a stream to play | Press Back to cancel</label>
        </control>
    </controls>
</window>
