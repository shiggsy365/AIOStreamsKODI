<?xml version="1.0" encoding="UTF-8"?>
<!--
    AIOStreams Stream Selection Dialog - Single Column with Poster Layout

    Displays streams in a single-column list with:
    - Left pane: Stream information in structured rows
    - Right pane: Content poster
    - Focused items: light blue text, bright border
    - Unfocused items: dimmed text, subtle border
-->
<window type="dialog">
    <defaultcontrol always="true">5000</defaultcontrol>

    <coordinates>
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </coordinates>

    <controls>
        <!-- ============================================ -->
        <!-- BACKGROUND LAYER -->
        <!-- ============================================ -->
        <control type="group">
            <!-- Solid black base -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>FF000000</colordiffuse>
            </control>

            <!-- Optional fanart (dimmed) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture background="true">$INFO[Window.Property(fanart)]</texture>
                <colordiffuse>33FFFFFF</colordiffuse>
                <visible>!String.IsEmpty(Window.Property(fanart))</visible>
            </control>

            <!-- Dark gradient overlay for readability -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>DD000000</colordiffuse>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- HEADER SECTION -->
        <!-- ============================================ -->
        <control type="group">
            <left>60</left>
            <top>30</top>
            <width>1800</width>
            <height>80</height>

            <!-- Clearlogo (if available) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>280</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window.Property(clearlogo)]</texture>
                <visible>!String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Title (if no clearlogo) -->
            <control type="label">
                <left>0</left>
                <top>15</top>
                <width>600</width>
                <height>50</height>
                <font>aiostreams_title</font>
                <textcolor>FFFFCC00</textcolor>
                <label>$INFO[Window.Property(title)]</label>
                <visible>String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Stream count badge -->
            <control type="label">
                <right>0</right>
                <top>25</top>
                <width>300</width>
                <height>30</height>
                <font>aiostreams_small</font>
                <textcolor>88FFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[Window.Property(stream_count)] streams</label>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- STREAM LIST - Single Column (full width) -->
        <!-- ============================================ -->
        <control type="list" id="5000">
            <left>60</left>
            <top>120</top>
            <width>1800</width>
            <height>880</height>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <pagecontrol>5001</pagecontrol>
            <scrolltime>200</scrolltime>
            <preloaditems>10</preloaditems>

            <!--
                UNFOCUSED ITEM LAYOUT
                Height 250px to accommodate poster and text rows
            -->
            <itemlayout height="250">
                <control type="group">
                    <!-- Item background (dark) -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>1790</width>
                        <height>240</height>
                        <texture>white.png</texture>
                        <colordiffuse>44222222</colordiffuse>
                    </control>

                    <!-- Border - left -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>2</width>
                        <height>240</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Border - right -->
                    <control type="image">
                        <left>1793</left>
                        <top>5</top>
                        <width>2</width>
                        <height>240</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Border - top -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>1790</width>
                        <height>2</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Border - bottom -->
                    <control type="image">
                        <left>5</left>
                        <top>243</top>
                        <width>1790</width>
                        <height>2</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- LEFT PANE: Stream Information -->
                    <control type="group">
                        <left>15</left>
                        <top>12</top>
                        <width>1400</width>
                        <height>226</height>

                        <!-- Top line: Resolution, Service, Addon (no headings) -->
                        <control type="label">
                            <left>0</left>
                            <top>0</top>
                            <width>1400</width>
                            <height>30</height>
                            <font>font13</font>
                            <textcolor>88FFFFFF</textcolor>
                            <label>$INFO[ListItem.Property(resolution)]   $INFO[ListItem.Property(service)]   $INFO[ListItem.Property(addon)]</label>
                        </control>

                        <!-- Row 1: SIZE, PROXIED, IN LIBRARY, DURATION -->
                        <control type="label">
                            <left>0</left>
                            <top>40</top>
                            <width>1400</width>
                            <height>28</height>
                            <font>font12</font>
                            <textcolor>88AAAAAA</textcolor>
                            <label>[COLOR FF00FF00]SIZE:[/COLOR] $INFO[ListItem.Property(size)]   [COLOR FF00FF00]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]   [COLOR FF00FF00]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(in_library)]   [COLOR FF00FF00]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                        </control>

                        <!-- Row 2: VIDEO, INDEXER -->
                        <control type="label">
                            <left>0</left>
                            <top>75</top>
                            <width>1400</width>
                            <height>28</height>
                            <font>font12</font>
                            <textcolor>88AAAAAA</textcolor>
                            <label>[COLOR FF00FF00]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]   [COLOR FF00FF00]INDEXER:[/COLOR] $INFO[ListItem.Property(indexer)]</label>
                        </control>

                        <!-- Row 3: AUDIO, CACHED -->
                        <control type="label">
                            <left>0</left>
                            <top>110</top>
                            <width>1400</width>
                            <height>28</height>
                            <font>font12</font>
                            <textcolor>88AAAAAA</textcolor>
                            <label>[COLOR FF00FF00]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]   [COLOR FF00FF00]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]</label>
                        </control>

                        <!-- Row 4: FILENAME -->
                        <control type="textbox">
                            <left>0</left>
                            <top>145</top>
                            <width>1400</width>
                            <height>70</height>
                            <font>font12</font>
                            <textcolor>88AAAAAA</textcolor>
                            <label>[COLOR FF00FF00]FILENAME:[/COLOR] $INFO[ListItem.Property(filename)]</label>
                        </control>
                    </control>

                    <!-- RIGHT PANE: Poster -->
                    <control type="image">
                        <left>1450</left>
                        <top>20</top>
                        <width>320</width>
                        <height>210</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window.Property(poster)]</texture>
                        <visible>!String.IsEmpty(Window.Property(poster))</visible>
                    </control>
                </control>
            </itemlayout>

            <!--
                FOCUSED ITEM LAYOUT - Light blue text, bright border
            -->
            <focusedlayout height="250">
                <control type="group">
                    <!-- Focused background -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>1790</width>
                        <height>240</height>
                        <texture>white.png</texture>
                        <colordiffuse>66111122</colordiffuse>
                    </control>

                    <!-- Border - left (light blue) -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>3</width>
                        <height>240</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Border - right (light blue) -->
                    <control type="image">
                        <left>1792</left>
                        <top>5</top>
                        <width>3</width>
                        <height>240</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Border - top (light blue) -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>1790</width>
                        <height>3</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Border - bottom (light blue) -->
                    <control type="image">
                        <left>5</left>
                        <top>242</top>
                        <width>1790</width>
                        <height>3</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- LEFT PANE: Stream Information -->
                    <control type="group">
                        <left>15</left>
                        <top>12</top>
                        <width>1400</width>
                        <height>226</height>

                        <!-- Top line: Resolution, Service, Addon (no headings) -->
                        <control type="label">
                            <left>0</left>
                            <top>0</top>
                            <width>1400</width>
                            <height>30</height>
                            <font>font13</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Property(resolution)]   $INFO[ListItem.Property(service)]   $INFO[ListItem.Property(addon)]</label>
                        </control>

                        <!-- Row 1: SIZE, PROXIED, IN LIBRARY, DURATION -->
                        <control type="label">
                            <left>0</left>
                            <top>40</top>
                            <width>1400</width>
                            <height>28</height>
                            <font>font12</font>
                            <textcolor>FFCCCCCC</textcolor>
                            <label>[COLOR FF00FF00]SIZE:[/COLOR] $INFO[ListItem.Property(size)]   [COLOR FF00FF00]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]   [COLOR FF00FF00]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(in_library)]   [COLOR FF00FF00]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                        </control>

                        <!-- Row 2: VIDEO, INDEXER -->
                        <control type="label">
                            <left>0</left>
                            <top>75</top>
                            <width>1400</width>
                            <height>28</height>
                            <font>font12</font>
                            <textcolor>FFCCCCCC</textcolor>
                            <label>[COLOR FF00FF00]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]   [COLOR FF00FF00]INDEXER:[/COLOR] $INFO[ListItem.Property(indexer)]</label>
                        </control>

                        <!-- Row 3: AUDIO, CACHED -->
                        <control type="label">
                            <left>0</left>
                            <top>110</top>
                            <width>1400</width>
                            <height>28</height>
                            <font>font12</font>
                            <textcolor>FFCCCCCC</textcolor>
                            <label>[COLOR FF00FF00]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]   [COLOR FF00FF00]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]</label>
                        </control>

                        <!-- Row 4: FILENAME -->
                        <control type="textbox">
                            <left>0</left>
                            <top>145</top>
                            <width>1400</width>
                            <height>70</height>
                            <font>font12</font>
                            <textcolor>FFCCCCCC</textcolor>
                            <label>[COLOR FF00FF00]FILENAME:[/COLOR] $INFO[ListItem.Property(filename)]</label>
                        </control>
                    </control>

                    <!-- RIGHT PANE: Poster -->
                    <control type="image">
                        <left>1450</left>
                        <top>20</top>
                        <width>320</width>
                        <height>210</height>
                        <aspectratio>keep</aspectratio>
                        <texture>$INFO[Window.Property(poster)]</texture>
                        <visible>!String.IsEmpty(Window.Property(poster))</visible>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="5001">
            <left>1870</left>
            <top>120</top>
            <width>8</width>
            <height>880</height>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <texturesliderbackground colordiffuse="22FFFFFF">white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="FF66CCFF">white.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="FF99DDFF">white.png</texturesliderbarfocus>
            <textureslidernib colordiffuse="00000000">white.png</textureslidernib>
            <textureslidernibfocus colordiffuse="00000000">white.png</textureslidernibfocus>
        </control>

        <!-- ============================================ -->
        <!-- FOOTER - Instructions -->
        <!-- ============================================ -->
        <control type="label">
            <left>60</left>
            <top>1015</top>
            <width>1800</width>
            <height>40</height>
            <font>aiostreams_helper</font>
            <textcolor>66FFFFFF</textcolor>
            <align>center</align>
            <label>Select stream to play  |  [B]Back[/B] to cancel</label>
        </control>
    </controls>
</window>
