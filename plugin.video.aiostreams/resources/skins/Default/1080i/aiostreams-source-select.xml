<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
    <controls>
        <!-- 1. BACKGROUNDS -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[Window.Property(fanart)]</texture>
            <fadetime>400</fadetime>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
            <colordiffuse>CCFFFFFF</colordiffuse>
        </control>

        <!-- 2. THE STREAM LIST -->
        <control type="list" id="5000">
            <left>60</left>
            <top>220</top>
            <width>1250</width>
            <height>820</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            <focusposition>0</focusposition>
            <orientation>vertical</orientation>
            
            <itemlayout height="165" width="1250">
                <!-- DARK GREY Right Background -->
                <control type="image">
                    <left>260</left>
                    <top>5</top>
                    <width>980</width>
                    <height>150</height>
                    <texture>white.png</texture>
                    <colordiffuse>ff1a1a1a</colordiffuse>
                </control>

                <!-- DARK RED Left Background -->
                <control type="image">
                    <left>0</left>
                    <top>5</top>
                    <width>250</width>
                    <height>150</height>
                    <texture>white.png</texture>
                    <colordiffuse>ff4d0000</colordiffuse>
                </control>
                
                <!-- RED BOX CONTENT (Left) -->
                <control type="group">
                    <left>0</left>
                    <top>5</top>
                    <control type="label">
                        <top>15</top>
                        <width>250</width>
                        <height>50</height>
                        <font>font30_title</font>
                        <align>center</align>
                        <label>$INFO[ListItem.Property(resolution)]</label>
                    </control>
                    <control type="label">
                        <top>65</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <label>$INFO[ListItem.Property(service)]</label>
                    </control>
                    <control type="label">
                        <top>95</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <label>$INFO[ListItem.Property(addon)]</label>
                    </control>
                </control>

                <!-- GREY BOX CONTENT (Right) -->
                <control type="group">
                    <left>280</left>
                    <top>15</top>
                    <control type="label">
                        <width>950</width>
                        <height>40</height>
                        <font>font11</font>
                        <textcolor>grey2</textcolor>
                        <label>[COLOR white]SIZE:[/COLOR] $INFO[ListItem.Property(size)]  •  [COLOR white]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]  •  [COLOR white]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]  •  [COLOR white]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(library)]  •  [COLOR white]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <width>950</width>
                        <height>40</height>
                        <font>font11</font>
                        <textcolor>grey2</textcolor>
                        <label>[COLOR white]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]  •  [COLOR white]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]</label>
                    </control>
                    <control type="label">
                        <top>80</top>
                        <width>950</width>
                        <height>40</height>
                        <font>font11</font>
                        <textcolor>grey2</textcolor>
                        <label>[COLOR white]FILENAME:[/COLOR] $INFO[ListItem.Label]</label>
                    </control>
                </control>
            </itemlayout>

            <focusedlayout height="165" width="1250">
                <!-- LIGHTER GREY Right Background -->
                <control type="image">
                    <left>260</left>
                    <top>5</top>
                    <width>980</width>
                    <height>150</height>
                    <texture>white.png</texture>
                    <colordiffuse>ff333333</colordiffuse>
                </control>

                <!-- LIGHTER RED Left Background -->
                <control type="image">
                    <left>0</left>
                    <top>5</top>
                    <width>250</width>
                    <height>150</height>
                    <texture>white.png</texture>
                    <colordiffuse>ff800000</colordiffuse>
                </control>
                
                <!-- RED BOX CONTENT (Left) -->
                <control type="group">
                    <left>0</left>
                    <top>5</top>
                    <control type="label">
                        <top>15</top>
                        <width>250</width>
                        <height>50</height>
                        <font>font30_title</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(resolution)]</label>
                    </control>
                    <control type="label">
                        <top>65</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(service)]</label>
                    </control>
                    <control type="label">
                        <top>95</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(addon)]</label>
                    </control>
                </control>

                <!-- GREY BOX CONTENT (Right) -->
                <control type="group">
                    <left>280</left>
                    <top>15</top>
                    <control type="label">
                        <width>950</width>
                        <height>40</height>
                        <font>font11</font>
                        <textcolor>white</textcolor>
                        <label>[COLOR gold]SIZE:[/COLOR] $INFO[ListItem.Property(size)]  •  [COLOR gold]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]  •  [COLOR gold]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]  •  [COLOR gold]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(library)]  •  [COLOR gold]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <width>950</width>
                        <height>40</height>
                        <font>font11</font>
                        <textcolor>white</textcolor>
                        <label>[COLOR gold]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]  •  [COLOR gold]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]</label>
                    </control>
                    <control type="label">
                        <top>80</top>
                        <width>950</width>
                        <height>40</height>
                        <font>font11</font>
                        <textcolor>white</textcolor>
                        <scroll>true</scroll>
                        <label>[COLOR gold]FILENAME:[/COLOR] $INFO[ListItem.Label]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- 3. POSTER GROUP -->
        <control type="group">
            <left>1320</left>
            <top>225</top>
            <control type="image">
                <width>540</width>
                <height>780</height>
                <aspectratio>keep</aspectratio>
                <texture background="true">$VAR[PosterTextureVar]</texture>
                <bordertexture border="20">Thumbnail_Shadow.png</bordertexture>
            </control>
        </control>

        <!-- 4. TOP LOGO -->
        <control type="image">
            <left>60</left>
            <top>30</top>
            <width>500</width>
            <height>160</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[Window.Property(clearlogo)]</texture>
        </control>

        <!-- 5. SCROLLBAR -->
        <control type="scrollbar" id="60">
            <left>1295</left>
            <top>220</top>
            <width>12</width>
            <height>820</height>
            <texturesliderbackground>ScrollBarV.png</texturesliderbackground>
            <texturesliderbar>ScrollBarV_Focus.png</texturesliderbar>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
    </controls>

    <variable name="PosterTextureVar">
        <value condition="!String.IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
        <value condition="!String.IsEmpty(Window.Property(poster))">$INFO[Window.Property(poster)]</value>
        <value>DefaultVideo.png</value>
    </variable>
</window>