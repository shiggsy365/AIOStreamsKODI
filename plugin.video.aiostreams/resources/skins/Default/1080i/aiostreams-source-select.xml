<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
    <controls>
        <!-- 1. BACKGROUND LAYER -->
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture>black-back.png</texture>
        </control>

        <control type="image">
            <include>FullScreenDimensions</include>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[Container(5000).ListItem.Property(fanart)]</texture>
            <fadetime>400</fadetime>
        </control>

        <control type="image">
            <include>FullScreenDimensions</include>
            <texture>black-back.png</texture>
            <colordiffuse>CCFFFFFF</colordiffuse>
        </control>

        <!-- 2. STREAM LIST (The "Narrow Boxes") -->
        <control type="list" id="5000">
            <left>80</left>
            <top>250</top>
            <width>1100</width>
            <height>750</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            
            <itemlayout height="110" width="1100">
                <!-- This draws the 'Box' background -->
                <control type="image">
                    <width>1080</width>
                    <height>100</height>
                    <texture border="10">button-nofocus.png</texture>
                </control>
                <control type="label">
                    <left>30</left>
                    <width>1000</width>
                    <height>100</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>

            <focusedlayout height="110" width="1100">
                <!-- This draws the 'Focused Box' background -->
                <control type="image">
                    <width>1080</width>
                    <height>100</height>
                    <texture border="10">button-focus.png</texture>
                    <animation effect="fade" start="100" end="70" time="200" condition="!Control.HasFocus(5000)">Conditional</animation>
                </control>
                <control type="label">
                    <left>30</left>
                    <width>1000</width>
                    <height>100</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>true</scroll>
                </control>
            </focusedlayout>
        </control>

        <!-- 3. SIDE POSTER (The Yellow Box Area) -->
        <control type="group">
            <left>1220</left>
            <top>250</top>
            <control type="image">
                <width>600</width>
                <height>750</height>
                <aspectratio>keep</aspectratio>
                <texture background="true">$INFO[Container(5000).ListItem.Icon]</texture>
                <fadetime>300</fadetime>
                <!-- Using the shadow texture from your original setup -->
                <bordertexture border="20">Thumbnail_Shadow.png</bordertexture>
            </control>
            
            <control type="label">
                <top>770</top>
                <width>600</width>
                <height>40</height>
                <font>font13</font>
                <align>center</align>
                <textcolor>grey2</textcolor>
                <label>$INFO[Container(5000).ListItem.Property(Debrid)] • $INFO[Container(5000).ListItem.Property(Resolution)] • $INFO[Container(5000).ListItem.Property(Size)]</label>
            </control>
        </control>

        <!-- 4. TOP LOGO LAYER (Moved here to ensure it's on top) -->
        <control type="image">
            <left>80</left>
            <top>40</top>
            <width>500</width>
            <height>180</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[Container(5000).ListItem.Property(clearlogo)]</texture>
        </control>

        <!-- 5. SCROLLBAR -->
        <control type="scrollbar" id="60">
            <left>1185</left>
            <top>250</top>
            <width>12</width>
            <height>750</height>
            <texturesliderbackground border="0,2,0,2">ScrollBarV.png</texturesliderbackground>
            <texturesliderbar border="0,2,0,2">ScrollBarV_Focus.png</texturesliderbar>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
    </controls>
</window>