<?xml version="1.0" encoding="UTF-8"?>
<!--
    AIOStreams Multi-Line Stream Selection Dialog

    This skin displays stream results with full emoji support and
    dynamic multi-line content (1-10 rows per stream).

    Uses textbox controls to properly render multi-line content
    with line breaks as provided by the formatter.
-->
<window type="dialog">
    <defaultcontrol always="true">5000</defaultcontrol>

    <coordinates>
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </coordinates>

    <controls>
        <!-- ============================================ -->
        <!-- BACKGROUND LAYER -->
        <!-- ============================================ -->
        <control type="group">
            <!-- Solid black base -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>FF000000</colordiffuse>
            </control>

            <!-- Optional fanart (dimmed) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture background="true">$INFO[Window.Property(fanart)]</texture>
                <colordiffuse>33FFFFFF</colordiffuse>
                <visible>!String.IsEmpty(Window.Property(fanart))</visible>
            </control>

            <!-- Dark gradient overlay for readability -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>DD000000</colordiffuse>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- HEADER SECTION -->
        <!-- ============================================ -->
        <control type="group">
            <left>60</left>
            <top>30</top>
            <width>1800</width>
            <height>100</height>

            <!-- Clearlogo (if available) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>280</width>
                <height>90</height>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window.Property(clearlogo)]</texture>
                <visible>!String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Title (if no clearlogo) -->
            <control type="label">
                <left>0</left>
                <top>20</top>
                <width>600</width>
                <height>50</height>
                <font>aiostreams_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$INFO[Window.Property(title)]</label>
                <visible>String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Stream count badge -->
            <control type="label">
                <right>0</right>
                <top>35</top>
                <width>300</width>
                <height>30</height>
                <font>aiostreams_small</font>
                <textcolor>88FFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[Window.Property(stream_count)] streams</label>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- STREAM LIST - Main Content Area -->
        <!-- ============================================ -->
        <control type="panel" id="5000">
            <left>60</left>
            <top>140</top>
            <width>1800</width>
            <height>850</height>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <orientation>vertical</orientation>
            <pagecontrol>5001</pagecontrol>
            <scrolltime>200</scrolltime>
            <preloaditems>5</preloaditems>

            <!--
                UNFOCUSED ITEM LAYOUT
                Uses textbox for multi-line content with proper line break handling
            -->
            <itemlayout width="1800" height="200">
                <control type="group">
                    <!-- Item background (subtle) -->
                    <control type="image">
                        <left>0</left>
                        <top>4</top>
                        <width>1800</width>
                        <height>192</height>
                        <texture>white.png</texture>
                        <colordiffuse>22FFFFFF</colordiffuse>
                    </control>

                    <!-- Left accent bar -->
                    <control type="image">
                        <left>0</left>
                        <top>4</top>
                        <width>4</width>
                        <height>192</height>
                        <texture>white.png</texture>
                        <colordiffuse>440099FF</colordiffuse>
                    </control>

                    <!--
                        STREAM CONTENT - Multi-line textbox
                        ListItem.Label contains ALL lines separated by \n
                        The textbox will render line breaks correctly
                    -->
                    <control type="textbox">
                        <left>20</left>
                        <top>12</top>
                        <width>1760</width>
                        <height>180</height>
                        <font>aiostreams_stream_detail</font>
                        <textcolor>FFDDDDDD</textcolor>
                        <align>left</align>
                        <autoscroll>false</autoscroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </control>
            </itemlayout>

            <!--
                FOCUSED ITEM LAYOUT
                Highlighted with blue accent
            -->
            <focusedlayout width="1800" height="200">
                <control type="group">
                    <!-- Focused background -->
                    <control type="image">
                        <left>0</left>
                        <top>4</top>
                        <width>1800</width>
                        <height>192</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF1A1A2E</colordiffuse>
                        <animation effect="fade" start="0" end="100" time="150">Focus</animation>
                    </control>

                    <!-- Left accent bar (bright blue when focused) -->
                    <control type="image">
                        <left>0</left>
                        <top>4</top>
                        <width>4</width>
                        <height>192</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF0099FF</colordiffuse>
                        <animation effect="fade" start="50" end="100" time="150">Focus</animation>
                    </control>

                    <!-- Selection glow effect -->
                    <control type="image">
                        <left>0</left>
                        <top>4</top>
                        <width>1800</width>
                        <height>192</height>
                        <texture border="3">white.png</texture>
                        <colordiffuse>880099FF</colordiffuse>
                        <animation effect="fade" start="0" end="100" time="150">Focus</animation>
                    </control>

                    <!--
                        STREAM CONTENT - Multi-line textbox (focused)
                        Brighter white text for better contrast
                    -->
                    <control type="textbox">
                        <left>20</left>
                        <top>12</top>
                        <width>1760</width>
                        <height>180</height>
                        <font>aiostreams_stream_detail</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <align>left</align>
                        <autoscroll>false</autoscroll>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="5001">
            <left>1870</left>
            <top>140</top>
            <width>8</width>
            <height>850</height>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <texturesliderbackground colordiffuse="22FFFFFF">white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="FF0099FF">white.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="FF00CCFF">white.png</texturesliderbarfocus>
            <textureslidernib colordiffuse="00000000">white.png</textureslidernib>
            <textureslidernibfocus colordiffuse="00000000">white.png</textureslidernibfocus>
        </control>

        <!-- ============================================ -->
        <!-- FOOTER - Instructions -->
        <!-- ============================================ -->
        <control type="label">
            <left>60</left>
            <top>1005</top>
            <width>1800</width>
            <height>40</height>
            <font>aiostreams_helper</font>
            <textcolor>66FFFFFF</textcolor>
            <align>center</align>
            <label>Select stream to play  |  [B]Back[/B] to cancel</label>
        </control>
    </controls>
</window>
