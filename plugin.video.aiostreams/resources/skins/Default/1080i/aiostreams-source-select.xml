<?xml version="1.0" encoding="UTF-8"?>
<!--
    AIOStreams Multi-Line Stream Selection Dialog - 2 Column Layout

    Displays streams in a 2-column grid with borders around each item.
    Focused items: light blue text, bright border
    Unfocused items: dimmed text, subtle border
-->
<window type="dialog">
    <defaultcontrol always="true">5000</defaultcontrol>

    <coordinates>
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </coordinates>

    <controls>
        <!-- ============================================ -->
        <!-- BACKGROUND LAYER -->
        <!-- ============================================ -->
        <control type="group">
            <!-- Solid black base -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>FF000000</colordiffuse>
            </control>

            <!-- Optional fanart (dimmed) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture background="true">$INFO[Window.Property(fanart)]</texture>
                <colordiffuse>33FFFFFF</colordiffuse>
                <visible>!String.IsEmpty(Window.Property(fanart))</visible>
            </control>

            <!-- Dark gradient overlay for readability -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>DD000000</colordiffuse>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- HEADER SECTION -->
        <!-- ============================================ -->
        <control type="group">
            <left>60</left>
            <top>30</top>
            <width>1800</width>
            <height>80</height>

            <!-- Clearlogo (if available) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>280</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window.Property(clearlogo)]</texture>
                <visible>!String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Title (if no clearlogo) -->
            <control type="label">
                <left>0</left>
                <top>15</top>
                <width>600</width>
                <height>50</height>
                <font>aiostreams_title</font>
                <textcolor>FFFFCC00</textcolor>
                <label>$INFO[Window.Property(title)]</label>
                <visible>String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Stream count badge -->
            <control type="label">
                <right>0</right>
                <top>25</top>
                <width>300</width>
                <height>30</height>
                <font>aiostreams_small</font>
                <textcolor>88FFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[Window.Property(stream_count)] streams</label>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- STREAM LIST - 2 Column Grid (wrapping panel) -->
        <!-- ============================================ -->
        <control type="panel" id="5000">
            <left>60</left>
            <top>120</top>
            <width>1800</width>
            <height>880</height>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <pagecontrol>5001</pagecontrol>
            <scrolltime>200</scrolltime>
            <preloaditems>10</preloaditems>

            <!--
                UNFOCUSED ITEM LAYOUT - Dimmed appearance
                Width 890 allows 2 items per row (1800/2 = 900, minus gap)
            -->
            <itemlayout width="890" height="175">
                <control type="group">
                    <!-- Item background (dark) -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>880</width>
                        <height>165</height>
                        <texture>white.png</texture>
                        <colordiffuse>44222222</colordiffuse>
                    </control>

                    <!-- Border - left -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>2</width>
                        <height>165</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Border - right -->
                    <control type="image">
                        <left>883</left>
                        <top>5</top>
                        <width>2</width>
                        <height>165</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Border - top -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>880</width>
                        <height>2</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Border - bottom -->
                    <control type="image">
                        <left>5</left>
                        <top>168</top>
                        <width>880</width>
                        <height>2</height>
                        <texture>white.png</texture>
                        <colordiffuse>44888888</colordiffuse>
                    </control>

                    <!-- Stream name (first line) - dimmed -->
                    <control type="label">
                        <left>15</left>
                        <top>12</top>
                        <width>860</width>
                        <height>28</height>
                        <font>aiostreams_stream_detail</font>
                        <textcolor>88AAAAAA</textcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(stream_name)]</label>
                    </control>

                    <!-- Stream description - dimmed -->
                    <control type="textbox">
                        <left>15</left>
                        <top>40</top>
                        <width>860</width>
                        <height>125</height>
                        <font>aiostreams_stream_desc</font>
                        <textcolor>66888888</textcolor>
                        <align>left</align>
                        <autoscroll>false</autoscroll>
                        <label>$INFO[ListItem.Property(stream_description)]</label>
                    </control>
                </control>
            </itemlayout>

            <!--
                FOCUSED ITEM LAYOUT - Light blue text, bright border
            -->
            <focusedlayout width="890" height="175">
                <control type="group">
                    <!-- Focused background -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>880</width>
                        <height>165</height>
                        <texture>white.png</texture>
                        <colordiffuse>66111122</colordiffuse>
                    </control>

                    <!-- Border - left (light blue) -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>3</width>
                        <height>165</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Border - right (light blue) -->
                    <control type="image">
                        <left>882</left>
                        <top>5</top>
                        <width>3</width>
                        <height>165</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Border - top (light blue) -->
                    <control type="image">
                        <left>5</left>
                        <top>5</top>
                        <width>880</width>
                        <height>3</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Border - bottom (light blue) -->
                    <control type="image">
                        <left>5</left>
                        <top>167</top>
                        <width>880</width>
                        <height>3</height>
                        <texture>white.png</texture>
                        <colordiffuse>FF66CCFF</colordiffuse>
                    </control>

                    <!-- Stream name - light blue when focused -->
                    <control type="label">
                        <left>15</left>
                        <top>12</top>
                        <width>860</width>
                        <height>28</height>
                        <font>aiostreams_stream_detail</font>
                        <textcolor>FF99DDFF</textcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(stream_name)]</label>
                    </control>

                    <!-- Stream description - lighter when focused -->
                    <control type="textbox">
                        <left>15</left>
                        <top>40</top>
                        <width>860</width>
                        <height>125</height>
                        <font>aiostreams_stream_desc</font>
                        <textcolor>FFCCCCCC</textcolor>
                        <align>left</align>
                        <autoscroll>false</autoscroll>
                        <label>$INFO[ListItem.Property(stream_description)]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="5001">
            <left>1870</left>
            <top>120</top>
            <width>8</width>
            <height>880</height>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <texturesliderbackground colordiffuse="22FFFFFF">white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="FF66CCFF">white.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="FF99DDFF">white.png</texturesliderbarfocus>
            <textureslidernib colordiffuse="00000000">white.png</textureslidernib>
            <textureslidernibfocus colordiffuse="00000000">white.png</textureslidernibfocus>
        </control>

        <!-- ============================================ -->
        <!-- FOOTER - Instructions -->
        <!-- ============================================ -->
        <control type="label">
            <left>60</left>
            <top>1015</top>
            <width>1800</width>
            <height>40</height>
            <font>aiostreams_helper</font>
            <textcolor>66FFFFFF</textcolor>
            <align>center</align>
            <label>Select stream to play  |  [B]Back[/B] to cancel</label>
        </control>
    </controls>
</window>
