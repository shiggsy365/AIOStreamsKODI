<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
    <controls>
        <!-- 1. BACKGROUNDS -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[Window.Property(fanart)]</texture>
            <fadetime>400</fadetime>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
            <colordiffuse>CCFFFFFF</colordiffuse>
        </control>

        <!-- 2. THE STREAM LIST (3-Row Metadata Layout) -->
        <control type="list" id="5000">
            <left>80</left>
            <top>250</top>
            <width>1200</width>
            <height>780</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            <focusposition>0</focusposition>
            <orientation>vertical</orientation>
            
            <itemlayout height="160" width="1200">
                <!-- Main Container Background -->
                <control type="image">
                    <width>1180</width>
                    <height>150</height>
                    <texture border="10">button-nofocus.png</texture>
                </control>
                
                <!-- RED BOX SECTION (Left) -->
                <control type="group">
                    <left>10</left>
                    <top>10</top>
                    <control type="image">
                        <width>250</width>
                        <height>130</height>
                        <texture border="5">red-box.png</texture> <!-- Ensure red-box.png exists or use a color diffuse -->
                        <colordiffuse>AAFF0000</colordiffuse>
                    </control>
                    <!-- Resolution (Large) -->
                    <control type="label">
                        <top>10</top>
                        <width>250</width>
                        <height>50</height>
                        <font>font30_title</font>
                        <align>center</align>
                        <label>$INFO[ListItem.Property(resolution)]</label>
                    </control>
                    <!-- Service -->
                    <control type="label">
                        <top>60</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <label>$INFO[ListItem.Property(service)]</label>
                    </control>
                    <!-- Addon -->
                    <control type="label">
                        <top>90</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <label>$INFO[ListItem.Property(addon)]</label>
                    </control>
                </control>

                <!-- GREY BOX SECTION (Right - 3 Rows) -->
                <control type="group">
                    <left>275</left>
                    <top>15</top>
                    <!-- Row 1: Size, Proxied, Cached, Library, Duration -->
                    <control type="label">
                        <width>900</width>
                        <height>40</height>
                        <font>font13</font>
                        <textcolor>grey2</textcolor>
                        <label>[COLOR white]SIZE:[/COLOR] $INFO[ListItem.Property(size)]  •  [COLOR white]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]  •  [COLOR white]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]  •  [COLOR white]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(library)]  •  [COLOR white]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                    </control>
                    <!-- Row 2: Video, Audio -->
                    <control type="label">
                        <top>40</top>
                        <width>900</width>
                        <height>40</height>
                        <font>font13</font>
                        <textcolor>grey2</textcolor>
                        <label>[COLOR white]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]  •  [COLOR white]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]</label>
                    </control>
                    <!-- Row 3: Filename -->
                    <control type="label">
                        <top>80</top>
                        <width>880</width>
                        <height>40</height>
                        <font>font12</font>
                        <textcolor>grey2</textcolor>
                        <label>[COLOR white]FILENAME:[/COLOR] $INFO[ListItem.Label]</label>
                    </control>
                </control>
            </itemlayout>

            <!-- Focused Layout (Same structure, white text/gold highlights) -->
            <focusedlayout height="160" width="1200">
                <control type="image">
                    <width>1180</width>
                    <height>150</height>
                    <texture border="10">button-focus.png</texture>
                </control>
                
                <!-- RED BOX SECTION (Left) -->
                <control type="group">
                    <left>10</left>
                    <top>10</top>
                    <control type="image">
                        <width>250</width>
                        <height>130</height>
                        <texture border="5">red-box.png</texture>
                        <colordiffuse>FFFF0000</colordiffuse>
                    </control>
                    <control type="label">
                        <top>10</top>
                        <width>250</width>
                        <height>50</height>
                        <font>font30_title</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(resolution)]</label>
                    </control>
                    <control type="label">
                        <top>60</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(service)]</label>
                    </control>
                    <control type="label">
                        <top>90</top>
                        <width>250</width>
                        <height>30</height>
                        <font>font12</font>
                        <align>center</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(addon)]</label>
                    </control>
                </control>

                <!-- GREY BOX SECTION (Right) -->
                <control type="group">
                    <left>275</left>
                    <top>15</top>
                    <control type="label">
                        <width>900</width>
                        <height>40</height>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <label>[COLOR gold]SIZE:[/COLOR] $INFO[ListItem.Property(size)]  •  [COLOR gold]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]  •  [COLOR gold]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]  •  [COLOR gold]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(library)]  •  [COLOR gold]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <width>900</width>
                        <height>40</height>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <label>[COLOR gold]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]  •  [COLOR gold]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]</label>
                    </control>
                    <control type="label">
                        <top>80</top>
                        <width>880</width>
                        <height>40</height>
                        <font>font12</font>
                        <textcolor>white</textcolor>
                        <scroll>true</scroll>
                        <label>[COLOR gold]FILENAME:[/COLOR] $INFO[ListItem.Label]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- 3. POSTER GROUP -->
        <control type="group">
            <left>1320</left>
            <top>250</top>
            <control type="image">
                <width>520</width>
                <height>730</height>
                <aspectratio>keep</aspectratio>
                <texture background="true">$VAR[PosterTextureVar]</texture>
                <bordertexture border="20">Thumbnail_Shadow.png</bordertexture>
            </control>
        </control>

        <!-- 4. TOP LOGO -->
        <control type="image">
            <left>80</left>
            <top>40</top>
            <width>500</width>
            <height>180</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[Window.Property(clearlogo)]</texture>
        </control>

        <!-- 5. SCROLLBAR -->
        <control type="scrollbar" id="60">
            <left>1290</left>
            <top>250</top>
            <width>12</width>
            <height>750</height>
            <texturesliderbackground border="0,2,0,2">ScrollBarV.png</texturesliderbackground>
            <texturesliderbar border="0,2,0,2">ScrollBarV_Focus.png</texturesliderbar>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
    </controls>

    <variable name="PosterTextureVar">
        <value condition="!String.IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
        <value condition="!String.IsEmpty(Window.Property(poster))">$INFO[Window.Property(poster)]</value>
        <value>DefaultVideo.png</value>
    </variable>
</window>