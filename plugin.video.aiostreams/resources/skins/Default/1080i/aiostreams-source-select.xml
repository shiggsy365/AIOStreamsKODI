<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>

    <variables>
        <variable name="PosterTextureVar">
            <value condition="!String.IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
            <value condition="!String.IsEmpty(Window.Property(poster))">$INFO[Window.Property(poster)]</value>
            <value>DefaultVideo.png</value>
        </variable>
    </variables>

    <controls>
        <!-- 1. BACKGROUNDS -->
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture colordiffuse="CC000000">colors/white.png</texture>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[Window.Property(fanart)]</texture>
            <fadetime>400</fadetime>
        </control>

        <control type="image">
            <include>FullScreenDimensions</include>
            <texture colordiffuse="80000000">colors/white.png</texture>
        </control>
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture colordiffuse="80000000">colors/white.png</texture>
        </control>

        <!-- 2. THE STREAM LIST -->
        <control type="list" id="5000">
            <left>60</left>
            <top>220</top>
            <width>1270</width>
            <height>820</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            <focusposition>0</focusposition>
            <orientation>vertical</orientation>
            
            <itemlayout height="130" width="1250">
                <control type="image">
                    <left>220</left>
                    <top>2</top>
                    <width>1028</width>
                    <height>126</height>
                    <texture colordiffuse="glass_bg">colors/white.png</texture>
                </control>
                <control type="image">
                    <left>220</left>
                    <top>2</top>
                    <width>1028</width>
                    <height>126</height>
                    <texture border="1" colordiffuse="glass_border">colors/white.png</texture>
                </control>
                <control type="image">
                    <left>2</left>
                    <top>2</top>
                    <width>216</width>
                    <height>126</height>
                    <texture colordiffuse="burgundy_bg">colors/white.png</texture>
                </control>
                <control type="image">
                    <left>2</left>
                    <top>2</top>
                    <width>216</width>
                    <height>126</height>
                    <texture border="1" colordiffuse="glass_border">colors/white.png</texture>
                </control>
                <control type="group">
                    <left>12</left>
                    <top>2</top>
                    <control type="label">
                        <top>5</top>
                        <width>200</width>
                        <height>50</height>
                        <font>font13</font>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(resolution)]</label>
                    </control>
                    <control type="label">
                        <top>50</top>
                        <width>200</width>
                        <height>30</height>
                        <font>font10</font>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(service)]</label>
                    </control>
                    <control type="label">
                        <top>80</top>
                        <width>200</width>
                        <height>30</height>
                        <font>font10</font>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(addon)]</label>
                    </control>
                </control>
                <control type="group">
                    <left>240</left>
                    <top>12</top>
                    <control type="label">
                        <top>0</top>
                        <width>990</width>
                        <height>35</height>
                        <font>font10</font>
                        <textcolor>grey</textcolor>
                        <label>[COLOR white]SIZE:[/COLOR] $INFO[ListItem.Property(size)]  •  [COLOR white]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]  •  [COLOR white]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]  •  [COLOR white]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(in_library)]  •  [COLOR white]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                    </control>
                    <control type="label">
                        <top>35</top>
                        <width>990</width>
                        <height>35</height>
                        <font>font10</font>
                        <textcolor>grey</textcolor>
                        <label>[COLOR white]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]  •  [COLOR white]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]  •  [COLOR white]INDEXER:[/COLOR] $INFO[ListItem.Property(indexer)]</label>
                    </control>
                    <control type="label">
                        <top>70</top>
                        <width>990</width>
                        <height>35</height>
                        <font>font10</font>
                        <textcolor>grey</textcolor>
                        <label>[COLOR white]FILENAME:[/COLOR] $INFO[ListItem.Property(filename)]</label>
                    </control>
                </control>
            </itemlayout>

            <focusedlayout height="130" width="1250">
                <control type="image">
                    <left>220</left>
                    <top>2</top>
                    <width>1028</width>
                    <height>126</height>
                    <texture colordiffuse="burgundy">colors/white.png</texture>
                </control>
                <control type="image">
                    <left>2</left>
                    <top>2</top>
                    <width>216</width>
                    <height>126</height>
                    <texture colordiffuse="burgundy">colors/white.png</texture>
                </control>
                <control type="image">
                    <left>2</left>
                    <top>2</top>
                    <width>216</width>
                    <height>126</height>
                    <texture border="1" colordiffuse="glass_border">colors/white.png</texture>
                </control>
                <control type="image">
                    <left>2</left>
                    <top>2</top>
                    <width>216</width>
                    <height>126</height>
                    <texture colordiffuse="ff800000">colors/white.png</texture>
                </control>
                <control type="group">
                    <left>12</left>
                    <top>2</top>
                    <control type="label">
                        <top>5</top>
                        <width>200</width>
                        <height>50</height>
                        <font>font18</font>
                        <align>left</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(resolution)]</label>
                    </control>
                    <control type="label">
                        <top>50</top>
                        <width>200</width>
                        <height>30</height>
                        <font>font10</font>
                        <align>left</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(service)]</label>
                    </control>
                    <control type="label">
                        <top>80</top>
                        <width>200</width>
                        <height>30</height>
                        <font>font10</font>
                        <align>left</align>
                        <textcolor>white</textcolor>
                        <label>$INFO[ListItem.Property(addon)]</label>
                    </control>
                </control>
                <control type="group">
                    <left>240</left>
                    <top>12</top>
                    <control type="label">
                        <top>0</top>
                        <width>990</width>
                        <height>35</height>
                        <font>font10</font>
                        <textcolor>white</textcolor>
                        <label>[COLOR gold]SIZE:[/COLOR] $INFO[ListItem.Property(size)]  •  [COLOR gold]PROXIED:[/COLOR] $INFO[ListItem.Property(proxied)]  •  [COLOR gold]CACHED:[/COLOR] $INFO[ListItem.Property(cached)]  •  [COLOR gold]IN LIBRARY:[/COLOR] $INFO[ListItem.Property(in_library)]  •  [COLOR gold]DURATION:[/COLOR] $INFO[ListItem.Property(duration)]</label>
                    </control>
                    <control type="label">
                        <top>35</top>
                        <width>990</width>
                        <height>35</height>
                        <font>font10</font>
                        <textcolor>white</textcolor>
                        <label>[COLOR gold]VIDEO:[/COLOR] $INFO[ListItem.Property(video)]  •  [COLOR gold]AUDIO:[/COLOR] $INFO[ListItem.Property(audio)]  •  [COLOR gold]INDEXER:[/COLOR] $INFO[ListItem.Property(indexer)]</label>
                    </control>
                    <control type="label">
                        <top>70</top>
                        <width>990</width>
                        <height>35</height>
                        <font>font10</font>
                        <textcolor>white</textcolor>
                        <scroll>true</scroll>
                        <label>[COLOR gold]FILENAME:[/COLOR] $INFO[ListItem.Property(filename)]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- 3. POSTER GROUP -->
        <control type="group">
            <left>1340</left>
            <top>245</top>
            <control type="group">
                <width>500</width>
                <height>690</height>
                <include>GlassPanel</include>
            </control>
            <control type="image" id="1001">
                <width>500</width>
                <height>690</height>
                <aspectratio>keep</aspectratio>
                <texture background="true">$INFO[Window.Property(poster)]</texture>
            </control>
            <!-- STREAM COUNT HEADING -->
            <control type="label">
                <top>710</top>
                <width>500</width>
                <height>60</height>
                <font>font30_title</font> <!-- Using a standard large/bold font -->
                <align>center</align>
                <textcolor>white</textcolor>
                <label>$INFO[Container(5000).NumItems] STREAMS FOUND</label>
            </control>
        </control>

        <!-- 4. TOP LOGO AND DESCRIPTION -->
        <control type="image">
            <left>60</left>
            <top>30</top>
            <width>500</width>
            <height>160</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[Window.Property(clearlogo)]</texture>
        </control>

        <control type="textbox">
            <left>580</left>
            <top>30</top>
            <width>1280</width>
            <height>160</height>
            <font>font12</font>
            <align>left</align>
            <textcolor>white</textcolor>
            <label>$INFO[Window.Property(plot)]</label>
            <textcolor>FFFFFFFF</textcolor>
            <shadowcolor>80000000</shadowcolor>
            <autoscroll delay="5000" repeat="5000" time="3000">true</autoscroll>
        </control>

        <!-- 5. SCROLLBAR -->
        <control type="scrollbar" id="60">
            <left>1295</left>
            <top>220</top>
            <width>12</width>
            <height>820</height>
            <texturesliderbackground>ScrollBarV.png</texturesliderbackground>
            <texturesliderbar>ScrollBarV_Focus.png</texturesliderbar>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
    </controls>
</window>