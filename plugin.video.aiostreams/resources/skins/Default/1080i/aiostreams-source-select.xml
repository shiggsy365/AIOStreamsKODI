<?xml version="1.0" encoding="UTF-8"?>
<!--
    AIOStreams Multi-Line Stream Selection Dialog - 2 Column Layout

    Displays streams in a 2-column grid with borders around each item.
    Name line uses standard font, description uses 25% smaller font.
-->
<window type="dialog">
    <defaultcontrol always="true">5000</defaultcontrol>

    <coordinates>
        <left>0</left>
        <top>0</top>
        <width>1920</width>
        <height>1080</height>
    </coordinates>

    <controls>
        <!-- ============================================ -->
        <!-- BACKGROUND LAYER -->
        <!-- ============================================ -->
        <control type="group">
            <!-- Solid black base -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>FF000000</colordiffuse>
            </control>

            <!-- Optional fanart (dimmed) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture background="true">$INFO[Window.Property(fanart)]</texture>
                <colordiffuse>33FFFFFF</colordiffuse>
                <visible>!String.IsEmpty(Window.Property(fanart))</visible>
            </control>

            <!-- Dark gradient overlay for readability -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>white.png</texture>
                <colordiffuse>DD000000</colordiffuse>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- HEADER SECTION -->
        <!-- ============================================ -->
        <control type="group">
            <left>60</left>
            <top>30</top>
            <width>1800</width>
            <height>80</height>

            <!-- Clearlogo (if available) -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>280</width>
                <height>70</height>
                <aspectratio>keep</aspectratio>
                <texture>$INFO[Window.Property(clearlogo)]</texture>
                <visible>!String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Title (if no clearlogo) -->
            <control type="label">
                <left>0</left>
                <top>15</top>
                <width>600</width>
                <height>50</height>
                <font>aiostreams_title</font>
                <textcolor>FFFFCC00</textcolor>
                <label>$INFO[Window.Property(title)]</label>
                <visible>String.IsEmpty(Window.Property(clearlogo))</visible>
            </control>

            <!-- Stream count badge -->
            <control type="label">
                <right>0</right>
                <top>25</top>
                <width>300</width>
                <height>30</height>
                <font>aiostreams_small</font>
                <textcolor>88FFFFFF</textcolor>
                <align>right</align>
                <label>$INFO[Window.Property(stream_count)] streams</label>
            </control>
        </control>

        <!-- ============================================ -->
        <!-- STREAM LIST - 2 Column Grid -->
        <!-- ============================================ -->
        <control type="panel" id="5000">
            <left>60</left>
            <top>120</top>
            <width>1800</width>
            <height>880</height>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <orientation>vertical</orientation>
            <pagecontrol>5001</pagecontrol>
            <scrolltime>200</scrolltime>
            <preloaditems>10</preloaditems>
            <itemgap>10</itemgap>

            <!--
                UNFOCUSED ITEM LAYOUT - 2 columns (880px each with 20px gap)
            -->
            <itemlayout width="890" height="175">
                <control type="group">
                    <!-- Item border/frame -->
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>880</width>
                        <height>170</height>
                        <texture border="2">white.png</texture>
                        <colordiffuse>66FFFFFF</colordiffuse>
                    </control>

                    <!-- Item background -->
                    <control type="image">
                        <left>2</left>
                        <top>2</top>
                        <width>876</width>
                        <height>166</height>
                        <texture>white.png</texture>
                        <colordiffuse>33000000</colordiffuse>
                    </control>

                    <!-- Stream name (first line) -->
                    <control type="label">
                        <left>12</left>
                        <top>8</top>
                        <width>856</width>
                        <height>28</height>
                        <font>aiostreams_stream_detail</font>
                        <textcolor>FFDDDDDD</textcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(stream_name)]</label>
                    </control>

                    <!-- Stream description (remaining lines - smaller font) -->
                    <control type="textbox">
                        <left>12</left>
                        <top>36</top>
                        <width>856</width>
                        <height>130</height>
                        <font>aiostreams_stream_desc</font>
                        <textcolor>FFAAAAAA</textcolor>
                        <align>left</align>
                        <autoscroll>false</autoscroll>
                        <label>$INFO[ListItem.Property(stream_description)]</label>
                    </control>
                </control>
            </itemlayout>

            <!--
                FOCUSED ITEM LAYOUT - Highlighted with colored border
            -->
            <focusedlayout width="890" height="175">
                <control type="group">
                    <!-- Focused border (red/bright) -->
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>880</width>
                        <height>170</height>
                        <texture border="3">white.png</texture>
                        <colordiffuse>FFCC0000</colordiffuse>
                        <animation effect="fade" start="70" end="100" time="150">Focus</animation>
                    </control>

                    <!-- Focused background -->
                    <control type="image">
                        <left>3</left>
                        <top>3</top>
                        <width>874</width>
                        <height>164</height>
                        <texture>white.png</texture>
                        <colordiffuse>66111111</colordiffuse>
                        <animation effect="fade" start="0" end="100" time="150">Focus</animation>
                    </control>

                    <!-- Stream name (first line) - brighter when focused -->
                    <control type="label">
                        <left>12</left>
                        <top>8</top>
                        <width>856</width>
                        <height>28</height>
                        <font>aiostreams_stream_detail</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <align>left</align>
                        <label>$INFO[ListItem.Property(stream_name)]</label>
                    </control>

                    <!-- Stream description (remaining lines - smaller font) -->
                    <control type="textbox">
                        <left>12</left>
                        <top>36</top>
                        <width>856</width>
                        <height>130</height>
                        <font>aiostreams_stream_desc</font>
                        <textcolor>FFCCCCCC</textcolor>
                        <align>left</align>
                        <autoscroll>false</autoscroll>
                        <label>$INFO[ListItem.Property(stream_description)]</label>
                    </control>
                </control>
            </focusedlayout>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="5001">
            <left>1870</left>
            <top>120</top>
            <width>8</width>
            <height>880</height>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <texturesliderbackground colordiffuse="22FFFFFF">white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="FFCC0000">white.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="FFFF3333">white.png</texturesliderbarfocus>
            <textureslidernib colordiffuse="00000000">white.png</textureslidernib>
            <textureslidernibfocus colordiffuse="00000000">white.png</textureslidernibfocus>
        </control>

        <!-- ============================================ -->
        <!-- FOOTER - Instructions -->
        <!-- ============================================ -->
        <control type="label">
            <left>60</left>
            <top>1015</top>
            <width>1800</width>
            <height>40</height>
            <font>aiostreams_helper</font>
            <textcolor>66FFFFFF</textcolor>
            <align>center</align>
            <label>Select stream to play  |  [B]Back[/B] to cancel</label>
        </control>
    </controls>
</window>
