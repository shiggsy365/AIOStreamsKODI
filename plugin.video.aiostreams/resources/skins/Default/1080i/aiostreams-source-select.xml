<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">5000</defaultcontrol>
    <controls>
        <!-- 1. BACKGROUNDS -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[Window.Property(fanart)]</texture>
            <fadetime>400</fadetime>
        </control>

        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
            <colordiffuse>CCFFFFFF</colordiffuse>
        </control>

        <!-- 2. THE STREAM LIST (Adjusted for better spacing and list item layout) -->
        <control type="list" id="5000">
            <left>80</left>
            <top>250</top>
            <width>1100</width>
            <height>750</height>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <onup>5000</onup>
            <ondown>5000</ondown>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            <focusposition>0</focusposition>
            <orientation>vertical</orientation>
            
            <itemlayout height="110" width="1100">
                <control type="image">
                    <width>1080</width>
                    <height>100</height>
                    <texture border="10">button-nofocus.png</texture>
                </control>
                <!-- Stream Title / Quality Info -->
                <control type="label">
                    <left>30</left>
                    <top>0</top>
                    <width>1000</width>
                    <height>60</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <!-- Secondary Info (Debrid/Source) -->
                <control type="label">
                    <left>30</left>
                    <top>55</top>
                    <width>1000</width>
                    <height>35</height>
                    <font>font12</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[ListItem.Property(Debrid)] • $INFO[ListItem.Property(Source)]</label>
                </control>
            </itemlayout>

            <focusedlayout height="110" width="1100">
                <control type="image">
                    <width>1080</width>
                    <height>100</height>
                    <texture border="10">button-focus.png</texture>
                </control>
                <control type="label">
                    <left>30</left>
                    <top>0</top>
                    <width>1000</width>
                    <height>60</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>true</scroll>
                </control>
                <control type="label">
                    <left>30</left>
                    <top>55</top>
                    <width>1000</width>
                    <height>35</height>
                    <font>font12</font>
                    <textcolor>white</textcolor>
                    <label>$INFO[ListItem.Property(Debrid)] • $INFO[ListItem.Property(Source)]</label>
                </control>
            </focusedlayout>
        </control>

        <!-- 3. POSTER GROUP (Updated to match specific alignment in image 2) -->
        <control type="group">
            <left>1220</left>
            <top>250</top>
            <control type="image">
                <width>600</width>
                <height>750</height>
                <aspectratio>keep</aspectratio>
                <texture background="true">$VAR[PosterTextureVar]</texture>
                <fadetime>300</fadetime>
                <bordertexture border="20">Thumbnail_Shadow.png</bordertexture>
            </control>
            
            <control type="label">
                <top>770</top>
                <width>600</width>
                <height>40</height>
                <font>font13_title</font>
                <align>center</align>
                <textcolor>white</textcolor>
                <label>$INFO[ListItem.Property(Resolution)] • $INFO[ListItem.Property(Size)]</label>
            </control>
        </control>

        <!-- 4. LOGO -->
        <control type="image">
            <left>80</left>
            <top>40</top>
            <width>500</width>
            <height>180</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[Window.Property(clearlogo)]</texture>
        </control>

        <!-- 5. SCROLLBAR -->
        <control type="scrollbar" id="60">
            <left>1185</left>
            <top>250</top>
            <width>12</width>
            <height>750</height>
            <texturesliderbackground border="0,2,0,2">ScrollBarV.png</texturesliderbackground>
            <texturesliderbar border="0,2,0,2">ScrollBarV_Focus.png</texturesliderbar>
            <onleft>5000</onleft>
            <onright>5000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
    </controls>

    <variable name="PosterTextureVar">
        <value condition="!String.IsEmpty(ListItem.Icon)">$INFO[ListItem.Icon]</value>
        <value>$INFO[Window.Property(poster)]</value>
    </variable>
</window>