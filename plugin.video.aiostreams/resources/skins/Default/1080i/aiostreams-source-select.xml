<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">1000</defaultcontrol>
    <controls>
        <!-- Background Fanart: Pulled from your original logic -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[Container(1000).ListItem.Property(fanart)]</texture>
            <fadetime>400</fadetime>
        </control>

        <!-- Dark Overlay -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>black-back.png</texture>
            <colordiffuse>CCFFFFFF</colordiffuse>
        </control>

        <!-- Clearlogo (Top Left) -->
        <control type="image">
            <left>80</left>
            <top>40</top>
            <width>450</width>
            <height>180</height>
            <aspectratio align="left">keep</aspectratio>
            <texture>$INFO[Container(1000).ListItem.Property(clearlogo)]</texture>
        </control>

        <!-- Main Stream List: Narrowed to 1100px for the "Narrow Box" look -->
        <control type="list" id="1000">
            <left>80</left>
            <top>250</top>
            <width>1100</width>
            <height>750</height>
            <onleft>1000</onleft>
            <onright>1000</onright>
            <onup>1000</onup>
            <ondown>1000</ondown>
            <pagecontrol>60</pagecontrol>
            <scrolltime tween="quadratic" easing="out">200</scrolltime>
            
            <itemlayout height="100" width="1100">
                <control type="image">
                    <width>1080</width>
                    <height>90</height>
                    <texture border="10">button-nofocus.png</texture>
                </control>
                <control type="label">
                    <left>30</left>
                    <top>0</top>
                    <width>1000</width>
                    <height>90</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>

            <focusedlayout height="100" width="1100">
                <control type="image">
                    <width>1080</width>
                    <height>90</height>
                    <texture border="10">button-focus.png</texture>
                    <visible>Control.HasFocus(1000)</visible>
                </control>
                <control type="label">
                    <left>30</left>
                    <top>0</top>
                    <width>1000</width>
                    <height>90</height>
                    <font>font14</font>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                    <label>$INFO[ListItem.Label]</label>
                    <scroll>true</scroll>
                </control>
            </focusedlayout>
        </control>

        <!-- THE SINGLE POSTER (Your Yellow Box) -->
        <!-- This is a single control that replaces the 400+ lines of repeating posters -->
        <control type="group">
            <left>1250</left>
            <top>250</top>
            <control type="image">
                <width>550</width>
                <height>750</height>
                <aspectratio>keep</aspectratio>
                <texture background="true">$INFO[Container(1000).ListItem.Icon]</texture>
                <fadetime>300</fadetime>
                <bordertexture border="20">Thumbnail_Shadow.png</bordertexture>
            </control>
            
            <!-- Metadata Area: Using your specific AIO properties -->
            <control type="label">
                <top>760</top>
                <width>550</width>
                <height>40</height>
                <font>font12</font>
                <align>center</align>
                <textcolor>grey2</textcolor>
                <label>$INFO[Container(1000).ListItem.Property(Debrid)]  |  $INFO[Container(1000).ListItem.Property(Resolution)]  |  $INFO[Container(1000).ListItem.Property(Size)]</label>
            </control>
        </control>

        <!-- Scrollbar -->
        <control type="scrollbar" id="60">
            <left>1185</left>
            <top>250</top>
            <width>10</width>
            <height>750</height>
            <texturesliderbackground border="0,2,0,2">ScrollBarV.png</texturesliderbackground>
            <texturesliderbar border="0,2,0,2">ScrollBarV_Focus.png</texturesliderbar>
            <onleft>1000</onleft>
            <onright>1000</onright>
            <showonepage>false</showonepage>
            <orientation>vertical</orientation>
        </control>
    </controls>
</window>
