<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>140</posx>
        <posy>80</posy>
    </coordinates>

    <!-- Background -->
    <controls>
        <control type="group">
            <width>1640</width>
            <height>920</height>

            <!-- Dark opaque background for better readability -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1640</width>
                <height>920</height>
                <texture colordiffuse="F5000000">white.png</texture>
            </control>

            <!-- Border -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1640</width>
                <height>920</height>
                <texture border="2" colordiffuse="FF0099FF">white.png</texture>
            </control>

            <!-- Title background -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1640</width>
                <height>80</height>
                <texture colordiffuse="FF0099FF">white.png</texture>
            </control>

            <!-- Title -->
            <control type="label">
                <posx>30</posx>
                <posy>20</posy>
                <width>1580</width>
                <height>40</height>
                <font>font13_title</font>
                <label>$INFO[Window.Property(dialog_title)]</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>FFFFFFFF</textcolor>
            </control>

            <!-- Stream list -->
            <control type="list" id="1000">
                <posx>20</posx>
                <posy>100</posy>
                <width>1600</width>
                <height>700</height>
                <onup>1000</onup>
                <ondown>1000</ondown>
                <onleft>2000</onleft>
                <onright>2000</onright>
                <pagecontrol>-</pagecontrol>
                <scrolltime>200</scrolltime>

                <!-- Item layout (unfocused) - increased height for 6 lines -->
                <itemlayout height="140">
                    <!-- Background -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1600</width>
                        <height>138</height>
                        <texture colordiffuse="22FFFFFF">white.png</texture>
                    </control>

                    <!-- Separator line -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>137</posy>
                        <width>1600</width>
                        <height>1</height>
                        <texture colordiffuse="44FFFFFF">white.png</texture>
                    </control>

                    <!-- Multi-line text -->
                    <control type="textbox">
                        <posx>15</posx>
                        <posy>8</posy>
                        <width>1570</width>
                        <height>122</height>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FFE0E0E0</textcolor>
                        <align>left</align>
                    </control>
                </itemlayout>

                <!-- Focused item layout - increased height for 6 lines -->
                <focusedlayout height="140">
                    <!-- Focused background -->
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1600</width>
                        <height>138</height>
                        <texture colordiffuse="FF0099FF">white.png</texture>
                    </control>

                    <!-- Multi-line text (black on blue) -->
                    <control type="textbox">
                        <posx>15</posx>
                        <posy>8</posy>
                        <width>1570</width>
                        <height>122</height>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FF000000</textcolor>
                        <align>left</align>
                    </control>
                </focusedlayout>
            </control>

            <!-- Cancel button -->
            <control type="button" id="2000">
                <posx>620</posx>
                <posy>820</posy>
                <width>400</width>
                <height>50</height>
                <font>font13</font>
                <label>Cancel</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <onup>1000</onup>
                <ondown>1000</ondown>
                <onleft>1000</onleft>
                <onright>1000</onright>
                <texturefocus colordiffuse="FF0099FF">white.png</texturefocus>
                <texturenofocus colordiffuse="44FFFFFF">white.png</texturenofocus>
            </control>
        </control>
    </controls>
</window>
