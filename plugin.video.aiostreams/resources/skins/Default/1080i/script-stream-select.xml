<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>240</posx>
        <posy>120</posy>
    </coordinates>

    <!-- Background -->
    <controls>
        <control type="group">
            <width>1440</width>
            <height>840</height>

            <!-- Dark background with border -->
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1440</width>
                <height>840</height>
                <texture border="20" colordiffuse="DD000000">dialogs/dialog-bg.png</texture>
            </control>

            <!-- Title -->
            <control type="label">
                <posx>40</posx>
                <posy>30</posy>
                <width>1360</width>
                <height>60</height>
                <font>font30_title</font>
                <label>$INFO[Window.Property(dialog_title)]</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>FFFFFFFF</textcolor>
            </control>

            <!-- Stream list -->
            <control type="list" id="1000">
                <posx>40</posx>
                <posy>120</posy>
                <width>1360</width>
                <height>600</height>
                <onup>1000</onup>
                <ondown>1000</ondown>
                <onleft>2000</onleft>
                <onright>2000</onright>
                <pagecontrol>-</pagecontrol>
                <scrolltime>200</scrolltime>

                <!-- Item layout -->
                <itemlayout height="120">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1360</width>
                        <height>118</height>
                        <texture border="5" colordiffuse="33FFFFFF">lists/separator.png</texture>
                    </control>

                    <!-- Multi-line text -->
                    <control type="textbox">
                        <posx>20</posx>
                        <posy>10</posy>
                        <width>1320</width>
                        <height>98</height>
                        <font>font13</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FFFFFFFF</textcolor>
                        <align>left</align>
                    </control>
                </itemlayout>

                <!-- Focused item layout -->
                <focusedlayout height="120">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1360</width>
                        <height>118</height>
                        <texture border="5" colordiffuse="FF0099FF">lists/focus.png</texture>
                    </control>

                    <!-- Multi-line text -->
                    <control type="textbox">
                        <posx>20</posx>
                        <posy>10</posy>
                        <width>1320</width>
                        <height>98</height>
                        <font>font13</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FF000000</textcolor>
                        <align>left</align>
                    </control>
                </focusedlayout>
            </control>

            <!-- Cancel button -->
            <control type="button" id="2000">
                <posx>520</posx>
                <posy>740</posy>
                <width>400</width>
                <height>60</height>
                <font>font13</font>
                <label>Cancel</label>
                <align>center</align>
                <aligny>center</aligny>
                <onup>1000</onup>
                <ondown>1000</ondown>
                <onleft>1000</onleft>
                <onright>1000</onright>
            </control>
        </control>
    </controls>
</window>
