<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3001</defaultcontrol>

    <controls>
        <!-- Background overlay (semi-transparent) -->
        <control type="image">
            <left>0</left>
            <top>750</top>
            <width>1920</width>
            <height>330</height>
            <texture>white.png</texture>
            <colordiffuse>DD000000</colordiffuse>
        </control>

        <!-- Container group for all elements -->
        <control type="group">
            <left>60</left>
            <top>780</top>

            <!-- Episode thumbnail -->
            <control type="image" id="1001">
                <left>0</left>
                <top>0</top>
                <width>400</width>
                <height>225</height>
                <aspectratio>scale</aspectratio>
                <texture>$INFO[Window.Property(episode_thumb)]</texture>
                <bordertexture border="10">Thumbnail_Shadow.png</bordertexture>
            </control>

            <!-- Content group (text and buttons) -->
            <control type="group">
                <left>430</left>
                <top>0</top>

                <!-- "Up Next" label -->
                <control type="label">
                    <left>0</left>
                    <top>10</top>
                    <width>700</width>
                    <height>30</height>
                    <font>font13</font>
                    <textcolor>FFAAAAAA</textcolor>
                    <label>UP NEXT</label>
                </control>

                <!-- Episode title -->
                <control type="label">
                    <left>0</left>
                    <top>40</top>
                    <width>700</width>
                    <height>40</height>
                    <font>font30</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$INFO[Window.Property(episode_title)]</label>
                </control>

                <!-- Countdown label -->
                <control type="label" id="2001">
                    <left>0</left>
                    <top>85</top>
                    <width>700</width>
                    <height>30</height>
                    <font>font13</font>
                    <textcolor>FFCCCCCC</textcolor>
                    <label>$INFO[Window.Property(countdown_text)]</label>
                </control>

                <!-- Buttons group -->
                <control type="grouplist" id="9000">
                    <left>0</left>
                    <top>130</top>
                    <width>800</width>
                    <height>80</height>
                    <orientation>horizontal</orientation>
                    <itemgap>20</itemgap>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <onup>9000</onup>
                    <ondown>9000</ondown>

                    <!-- Play Now button -->
                    <control type="button" id="3001">
                        <width>300</width>
                        <height>60</height>
                        <font>font13</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFFFFFF</focusedcolor>
                        <label>Play Now</label>
                        <texturefocus>white.png</texturefocus>
                        <texturenofocus>white.png</texturenofocus>
                        <colordiffuse>FF00AA00</colordiffuse>
                        <focusedcolordiffuse>FF00DD00</focusedcolordiffuse>
                    </control>

                    <!-- Cancel button -->
                    <control type="button" id="3002">
                        <width>300</width>
                        <height>60</height>
                        <font>font13</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFFFFFF</focusedcolor>
                        <label>Stop Watching</label>
                        <texturefocus>white.png</texturefocus>
                        <texturenofocus>white.png</texturenofocus>
                        <colordiffuse>FFAA0000</colordiffuse>
                        <focusedcolordiffuse>FFDD0000</focusedcolordiffuse>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
