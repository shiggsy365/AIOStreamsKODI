<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">3002</defaultcontrol>
    <zorder>1</zorder>

    <controls>
        <!-- Background overlay (semi-transparent, compact corner popup) -->
        <control type="image">
            <left>1400</left>
            <top>60</top>
            <width>460</width>
            <height>280</height>
            <texture>white.png</texture>
            <colordiffuse>DD000000</colordiffuse>
            <bordertexture border="5">Thumbnail_Shadow.png</bordertexture>
        </control>

        <!-- Container group for all elements -->
        <control type="group">
            <left>1420</left>
            <top>80</top>

            <!-- Episode thumbnail (smaller for corner popup) -->
            <control type="image" id="1001">
                <left>0</left>
                <top>0</top>
                <width>200</width>
                <height>113</height>
                <aspectratio>scale</aspectratio>
                <texture>$INFO[Window.Property(episode_thumb)]</texture>
                <bordertexture border="5">Thumbnail_Shadow.png</bordertexture>
            </control>

            <!-- Content group (text and buttons) -->
            <control type="group">
                <left>0</left>
                <top>120</top>

                <!-- "Up Next" label -->
                <control type="label">
                    <left>0</left>
                    <top>0</top>
                    <width>420</width>
                    <height>25</height>
                    <font>font12</font>
                    <textcolor>FFAAAAAA</textcolor>
                    <label>UP NEXT</label>
                </control>

                <!-- Episode title -->
                <control type="label">
                    <left>0</left>
                    <top>22</top>
                    <width>420</width>
                    <height>30</height>
                    <font>font13_title</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$INFO[Window.Property(episode_title)]</label>
                </control>

                <!-- Countdown label -->
                <control type="label" id="2001">
                    <left>0</left>
                    <top>52</top>
                    <width>420</width>
                    <height>25</height>
                    <font>font12</font>
                    <textcolor>FFCCCCCC</textcolor>
                    <label>$INFO[Window.Property(countdown_text)]</label>
                </control>

                <!-- Buttons group (horizontal, compact) -->
                <control type="grouplist" id="9000">
                    <left>0</left>
                    <top>85</top>
                    <width>420</width>
                    <height>50</height>
                    <orientation>horizontal</orientation>
                    <itemgap>10</itemgap>
                    <onleft>9000</onleft>
                    <onright>9000</onright>
                    <onup>9000</onup>
                    <ondown>9000</ondown>

                    <!-- Play Now button (compact) -->
                    <control type="button" id="3001">
                        <width>200</width>
                        <height>45</height>
                        <font>font12</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFFFFFF</focusedcolor>
                        <label>Play Now</label>
                        <texturefocus>white.png</texturefocus>
                        <texturenofocus>white.png</texturenofocus>
                        <colordiffuse>FF00AA00</colordiffuse>
                        <focusedcolordiffuse>FF00DD00</focusedcolordiffuse>
                    </control>

                    <!-- Cancel button (compact) -->
                    <control type="button" id="3002">
                        <width>200</width>
                        <height>45</height>
                        <font>font12</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <focusedcolor>FFFFFFFF</focusedcolor>
                        <label>Cancel</label>
                        <texturefocus>white.png</texturefocus>
                        <texturenofocus>white.png</texturenofocus>
                        <colordiffuse>FFAA0000</colordiffuse>
                        <focusedcolordiffuse>FFDD0000</focusedcolordiffuse>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
