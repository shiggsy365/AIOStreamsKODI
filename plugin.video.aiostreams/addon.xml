<?xml version="1.1.12" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.aiostreams" name="AIOStreams" version="1.1.12" provider-name="Jon">
    <requires>
        <import addon="xbmc.python" version="1.1.12"/>
        <import addon="script.module.requests" version="1.1.12"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="login" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">AIOStreams addon for Kodi with advanced features</summary>
        <description lang="en_GB">Search and stream content from AIOStreams.</description>
        <platform>all</platform>
        <license>MIT</license>
        <news>v1.1.8: Absolute Sync.</news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>