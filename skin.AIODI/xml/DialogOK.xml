<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <!-- Background -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="DD000000">common/white.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>

        <!-- Dialog Box -->
        <control type="group">
            <left>560</left>
            <top>340</top>
            <width>800</width>
            <height>400</height>

            <!-- Dialog Background -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>800</width>
                <height>400</height>
                <texture colordiffuse="FF1A1A1A">common/white.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>

            <!-- Title -->
            <control type="label" id="1">
                <left>40</left>
                <top>40</top>
                <width>720</width>
                <height>60</height>
                <font>font37_title</font>
                <textcolor>FF1E90FF</textcolor>
                <align>center</align>
            </control>

            <!-- Message -->
            <control type="textbox" id="9">
                <left>40</left>
                <top>120</top>
                <width>720</width>
                <height>180</height>
                <font>font27</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
            </control>

            <!-- OK Button -->
            <control type="button" id="10">
                <left>300</left>
                <top>320</top>
                <width>200</width>
                <height>60</height>
                <font>font30</font>
                <label>OK</label>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF000000</focusedcolor>
                <align>center</align>
            </control>
        </control>
    </controls>
</window>
