<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(temp_idx,$INFO[Skin.String(MovieRow4Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow4Index,$INFO[Skin.String(MovieRow3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow3Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(temp_idx,$INFO[Skin.String(SeriesRow4Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow4Index,$INFO[Skin.String(SeriesRow3Index)])</onclick>
