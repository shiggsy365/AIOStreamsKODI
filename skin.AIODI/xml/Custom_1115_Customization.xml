<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row3Index,$INFO[Skin.String(temp_idx)])</onclick>
</item>

<item>
<label>--- Reset ---</label>
<onclick>noop</onclick>
</item>
<item>
<label>Reset to Defaults</label>
<onclick>Skin.Reset(HideMovies)</onclick>
<onclick>Skin.Reset(HideSeries)</onclick>
<onclick>Skin.Reset(HideTV)</onclick>
<onclick>Skin.Reset(HideMusic)</onclick>
<onclick>Skin.SetString(MovieRow1Index,0)</onclick>
<onclick>Skin.SetString(MovieRow2Index,1)</onclick>
<onclick>Skin.SetString(MovieRow3Index,2)</onclick>
<onclick>Skin.SetString(MovieRow4Index,3)</onclick>
<onclick>Skin.SetString(SeriesRow1Index,0)</onclick>
<onclick>Skin.SetString(SeriesRow2Index,1)</onclick>
<onclick>Skin.SetString(SeriesRow3Index,2)</onclick>
<onclick>Skin.SetString(SeriesRow4Index,3)</onclick>
<onclick>Skin.SetString(Row1Index,0)</onclick>
<onclick>Skin.SetString(Row2Index,1)</onclick>
<onclick>Skin.SetString(Row3Index,2)</onclick>
<onclick>Skin.SetString(Row4Index,3)</onclick>
