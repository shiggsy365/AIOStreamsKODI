<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow2Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(temp_idx,$INFO[Skin.String(SeriesRow3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow3Index,$INFO[Skin.String(SeriesRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow2Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(temp_idx,$INFO[Skin.String(Row3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row3Index,$INFO[Skin.String(Row2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row2Index,$INFO[Skin.String(temp_idx)])</onclick>
</item>
<item>
<label>Row 3: Move Down</label>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(temp_idx,$INFO[Skin.String(MovieRow3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow3Index,$INFO[Skin.String(MovieRow4Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow4Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(temp_idx,$INFO[Skin.String(SeriesRow3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow3Index,$INFO[Skin.String(SeriesRow4Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow4Index,$INFO[Skin.String(temp_idx)])</onclick>

