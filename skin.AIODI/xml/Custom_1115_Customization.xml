<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1115">
<defaultcontrol>9000</defaultcontrol>
<onload>SetProperty(ReorderTarget,MOVIES,home)</onload>
<controls>
<control type="group">
<include>OpenClose_Right</include>
<left>530</left>
<top>80</top>
<width>860</width>
<height>920</height>
<control type="image">
<include>FullScreenDimensions</include>
<texture colordiffuse="background">colors/black.png</texture>
<animation effect="fade" start="0" end="80" time="300">WindowOpen</animation>
</control>
<control type="image">
<left>0</left>
<top>0</top>
<width>860</width>
<height>920</height>
<texture border="20">dialogs/dialog-bg.png</texture>
</control>
<control type="label">
<left>40</left>
<top>20</top>
<width>780</width>
<height>40</height>
<label>AIODI Customization</label>
<font>font27_title</font>
<textcolor>button_focus</textcolor>
</control>

<control type="fixedlist" id="9000">
<left>40</left>
<top>80</top>
<width>780</width>
<height>800</height>
<onleft>9000</onleft>
<onright>9000</onright>
<onup>9000</onup>
<ondown>9000</ondown>
<scrolltime tween="cubic" easing="out">500</scrolltime>
<itemlayout height="50" width="780">
<control type="label">
<left>20</left>
<width>600</width>
<height>50</height>
<font>font12</font>
<aligny>center</aligny>
<label>$INFO[ListItem.Label]</label>
</control>
<control type="image">
<right>20</right>
<top>5</top>
<width>40</width>
<height>40</height>
<texture>$INFO[ListItem.Property(status_icon)]</texture>
</control>
</itemlayout>
<focusedlayout height="50" width="780">
<control type="image">
<width>780</width>
<height>50</height>
<texture colordiffuse="button_focus">lists/focus.png</texture>
</control>
<control type="label">
<left>20</left>
<width>600</width>
<height>50</height>
<font>font12</font>
<aligny>center</aligny>
<label>$INFO[ListItem.Label]</label>
<textcolor>black</textcolor>
</control>
<control type="image">
<right>20</right>
<top>5</top>
<width>40</width>
<height>40</height>
<texture>$INFO[ListItem.Property(status_icon)]</texture>
</control>
</focusedlayout>
<content>
<item>
<label>--- Global Visibility ---</label>
<onclick>noop</onclick>
</item>
<item>
<label>Show Movies</label>
<onclick>Skin.ToggleSetting(HideMovies)</onclick>
<property name="status_icon">$VAR[StatusMoviesIconVar]</property>
</item>
<item>
<label>Show Series</label>
<onclick>Skin.ToggleSetting(HideSeries)</onclick>
<property name="status_icon">$VAR[StatusSeriesIconVar]</property>
</item>
<item>
<label>Show TV</label>
<onclick>Skin.ToggleSetting(HideTV)</onclick>
<property name="status_icon">$VAR[StatusTVIconVar]</property>
</item>
<item>
<label>Show Music</label>
<onclick>Skin.ToggleSetting(HideMusic)</onclick>
<property name="status_icon">$VAR[StatusMusicIconVar]</property>
</item>

<item>
<label>--- Reorder Widgets for: [ $INFO[Window(Home).Property(ReorderTarget)] ] ---</label>
<onclick>noop</onclick>
</item>
<item>
<label>Select Target: MOVIES</label>
<onclick>SetProperty(ReorderTarget,MOVIES,home)</onclick>
</item>
<item>
<label>Select Target: SERIES</label>
<onclick>SetProperty(ReorderTarget,SERIES,home)</onclick>
</item>
<item>
<label>Select Target: HOME</label>
<onclick>SetProperty(ReorderTarget,HOME,home)</onclick>
</item>

<item>
<label>Row 1: Move Down</label>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(temp_idx,$INFO[Skin.String(MovieRow1Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow1Index,$INFO[Skin.String(MovieRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow2Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(temp_idx,$INFO[Skin.String(SeriesRow1Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow1Index,$INFO[Skin.String(SeriesRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow2Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(temp_idx,$INFO[Skin.String(Row1Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row1Index,$INFO[Skin.String(Row2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row2Index,$INFO[Skin.String(temp_idx)])</onclick>
</item>
<item>
<label>Row 2: Move Up</label>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(temp_idx,$INFO[Skin.String(MovieRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow2Index,$INFO[Skin.String(MovieRow1Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow1Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(temp_idx,$INFO[Skin.String(SeriesRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow2Index,$INFO[Skin.String(SeriesRow1Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow1Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(temp_idx,$INFO[Skin.String(Row2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row2Index,$INFO[Skin.String(Row1Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row1Index,$INFO[Skin.String(temp_idx)])</onclick>
</item>
<item>
<label>Row 2: Move Down</label>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(temp_idx,$INFO[Skin.String(MovieRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow2Index,$INFO[Skin.String(MovieRow3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(MovieRow3Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(temp_idx,$INFO[Skin.String(SeriesRow2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow2Index,$INFO[Skin.String(SeriesRow3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),SERIES)">Skin.SetString(SeriesRow3Index,$INFO[Skin.String(temp_idx)])</onclick>

<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(temp_idx,$INFO[Skin.String(Row2Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row2Index,$INFO[Skin.String(Row3Index)])</onclick>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),HOME)">Skin.SetString(Row3Index,$INFO[Skin.String(temp_idx)])</onclick>
</item>
<item>
<label>Row 3: Move Up</label>
<onclick condition="String.IsEqual(Window(Home).Property(ReorderTarget),MOVIES)">Skin.SetString(temp_idx,$INFO[Skin.String(MovieRow3Index)])</onclick>
