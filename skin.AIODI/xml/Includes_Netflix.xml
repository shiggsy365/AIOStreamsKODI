<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Netflix-Style Color Variables -->
	<variable name="NetflixBackground">
		<value>#141414</value>
	</variable>
	<variable name="NetflixMenuBg">
		<value>#000000</value>
	</variable>
	<variable name="NetflixRed">
		<value>#E50914</value>
	</variable>
	<variable name="NetflixTextPrimary">
		<value>#FFFFFF</value>
	</variable>
	<variable name="NetflixTextSecondary">
		<value>#B3B3B3</value>
	</variable>
	
	<!-- Top Menu Bar Template -->
	<include name="NetflixMenuBar">
		<control type="group" id="9000">
			<top>0</top>
			<left>0</left>
			<width>1920</width>
			<height>80</height>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>80</height>
				<texture colordiffuse="$VAR[NetflixMenuBg]">colors/white.png</texture>
				<animation effect="fade" start="100" end="90" time="0">Conditional</animation>
			</control>
			
			<!-- AIOStreams Logo -->
			<control type="image">
				<left>60</left>
				<top>12</top>
				<width>160</width>
				<height>56</height>
				<texture>special://skin/media/aiostreams_logo.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			
			<!-- Menu Items -->
			<control type="fixedlist" id="9001">
				<left>260</left>
				<top>0</top>
				<width>1400</width>
				<height>80</height>
				<orientation>horizontal</orientation>
				<focusposition>0</focusposition>
				<movement>1</movement>
				<ondown>SetFocus(5000)</ondown>
				<onup>noop</onup>
				<scrolltime tween="cubic" easing="out">300</scrolltime>
				
				<itemlayout width="180" height="80">
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>180</width>
						<height>80</height>
						<font>font13_title</font>
						<textcolor>$VAR[NetflixTextSecondary]</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				
				<focusedlayout width="180" height="80">
					<control type="group">
						<control type="label">
							<left>0</left>
							<top>0</top>
							<width>180</width>
							<height>80</height>
							<font>font13_title</font>
							<textcolor>$VAR[NetflixTextPrimary]</textcolor>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<animation effect="zoom" center="90,40" start="100" end="110" time="200">Focus</animation>
						</control>
						<!-- Active page indicator -->
						<control type="image">
							<left>40</left>
							<top>70</top>
							<width>100</width>
							<height>4</height>
							<texture colordiffuse="$VAR[NetflixRed]">colors/white.png</texture>
							<visible>String.IsEqual(ListItem.Property(page_id),Window(Home).Property(CurrentPage))</visible>
						</control>
					</control>
				</focusedlayout>
				
				<content>
					<item>
						<label>Home</label>
						<onclick>SetProperty(CurrentPage,home,home)</onclick>
						<onclick>SetFocus(5000)</onclick>
						<property name="page_id">home</property>
						<visible>!Skin.HasSetting(HideHome)</visible>
					</item>
					<item>
						<label>Movies</label>
						<onclick>SetProperty(CurrentPage,movies,home)</onclick>
						<onclick>SetFocus(5000)</onclick>
						<property name="page_id">movies</property>
						<visible>!Skin.HasSetting(HideMovies)</visible>
					</item>
					<item>
						<label>Series</label>
						<onclick>SetProperty(CurrentPage,series,home)</onclick>
						<onclick>SetFocus(5000)</onclick>
						<property name="page_id">series</property>
						<visible>!Skin.HasSetting(HideSeries)</visible>
					</item>
					<item>
						<label>TV</label>
						<onclick>SetProperty(CurrentPage,tv,home)</onclick>
						<onclick>SetFocus(5000)</onclick>
						<property name="page_id">tv</property>
						<visible>!Skin.HasSetting(HideTV)</visible>
					</item>
					<item>
						<label>Music</label>
						<onclick>SetProperty(CurrentPage,music,home)</onclick>
						<onclick>SetFocus(5000)</onclick>
						<property name="page_id">music</property>
						<visible>!Skin.HasSetting(HideMusic)</visible>
					</item>
					<item>
						<label>Settings</label>
						<onclick>ActivateWindow(settings)</onclick>
						<property name="page_id">settings</property>
					</item>
				</content>
			</control>
			
			<!-- Settings Icon -->
			<control type="button" id="9002">
				<right>60</right>
				<top>20</top>
				<width>40</width>
				<height>40</height>
				<texturefocus colordiffuse="$VAR[NetflixRed]">icons/sidemenu/settings_svg.png</texturefocus>
				<texturenofocus colordiffuse="$VAR[NetflixTextSecondary]">icons/sidemenu/settings_svg.png</texturenofocus>
				<onclick>ActivateWindow(1115)</onclick>
				<onleft>SetFocus(9001)</onleft>
				<ondown>SetFocus(5000)</ondown>
			</control>
		</control>
	</include>
	
	<!-- Netflix-Style Widget Row Template -->
	<include name="NetflixWidgetRow">
		<param name="row_id" />
		<param name="row_label" />
		<param name="content_path" />
		<param name="visible_condition" default="true" />
		
		<definition>
			<control type="group">
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>320</height>
				<visible>$PARAM[visible_condition]</visible>
				
				<!-- Row Header -->
				<control type="label">
					<left>60</left>
					<top>0</top>
					<width>1800</width>
					<height>40</height>
					<font>font13_title</font>
					<textcolor>$VAR[NetflixTextPrimary]</textcolor>
					<label>$PARAM[row_label]</label>
				</control>
				
				<!-- Widget List -->
				<control type="list" id="$PARAM[row_id]">
					<left>60</left>
					<top>50</top>
					<width>1800</width>
					<height>270</height>
					<orientation>horizontal</orientation>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<scrolltime tween="cubic" easing="out">300</scrolltime>
					<focusposition>1</focusposition>
					<movement>1</movement>
					<preloaditems>2</preloaditems>
					<pagecontrol>-</pagecontrol>
					<viewtype label="list">list</viewtype>
					
					<itemlayout width="180" height="270">
						<control type="image">
							<left>5</left>
							<top>5</top>
							<width>170</width>
							<height>255</height>
							<aspectratio>scale</aspectratio>
							<texture>$INFO[ListItem.Art(poster)]</texture>
							<bordertexture border="2">colors/white.png</bordertexture>
							<bordersize>0</bordersize>
						</control>
					</itemlayout>
					
					<focusedlayout width="180" height="270">
						<control type="group">
							<animation effect="zoom" center="90,135" start="100" end="115" time="200">Focus</animation>
							<animation effect="zoom" center="90,135" start="115" end="100" time="200">UnFocus</animation>
							<control type="image">
								<left>5</left>
								<top>5</top>
								<width>170</width>
								<height>255</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.Art(poster)]</texture>
								<bordertexture colordiffuse="$VAR[NetflixRed]" border="3">colors/white.png</bordertexture>
								<bordersize>3</bordersize>
							</control>
						</control>
					</focusedlayout>
					
					<content>$PARAM[content_path]</content>
				</control>
			</control>
		</definition>
	</include>
	
	<!-- Widget Container Common Properties -->
	<include name="NetflixWidgetContainer">
		<top>100</top>
		<left>0</left>
		<width>1920</width>
		<bottom>0</bottom>
		<orientation>vertical</orientation>
		<scrolltime tween="cubic" easing="out">400</scrolltime>
		<focusposition>1</focusposition>
		<movement>1</movement>
		<onup>SetFocus(9001)</onup>
		<onleft>noop</onleft>
		<onright>noop</onright>
	</include>
</includes>
