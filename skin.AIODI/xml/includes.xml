<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <!-- Include all other include files -->
    <include file="includes/Widgets.xml"/>
    <include file="includes/AIOStreamsMenus.xml"/>

    <!-- Common Window Properties -->
    <include name="CommonBackground">
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture background="true">$INFO[Window(Home).Property(Fanart_Image)]</texture>
            <aspectratio>scale</aspectratio>
        </control>
    </include>

    <!-- Navigation Bar -->
    <include name="NavigationBar">
        <control type="group">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>120</height>

            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>120</height>
                <texture colordiffuse="DD000000">common/white.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>

            <control type="label">
                <left>60</left>
                <top>30</top>
                <width>400</width>
                <height>60</height>
                <font>font37_title</font>
                <textcolor>FF1E90FF</textcolor>
                <label>AIODI</label>
            </control>
        </control>
    </include>

    <!-- Loading Animation -->
    <include name="Loading">
        <control type="group">
            <visible>Window.IsActive(busydialog)</visible>
            <left>860</left>
            <top>490</top>
            <width>200</width>
            <height>100</height>

            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>200</width>
                <height>100</height>
                <texture colordiffuse="AA000000">common/white.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>

            <control type="label">
                <left>0</left>
                <top>30</top>
                <width>200</width>
                <height>40</height>
                <font>font27</font>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
                <label>Loading...</label>
            </control>
        </control>
    </include>

</includes>
