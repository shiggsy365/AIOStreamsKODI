<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1107">
	<defaultcontrol always="true">9000</defaultcontrol>
	<!-- Directly launch Global Search when this window opens -->
	<onload condition="System.AddonIsEnabled(script.globalsearch)">RunScript(script.globalsearch)</onload>
	<onload condition="System.AddonIsEnabled(script.globalsearch)">Dialog.Close(1107)</onload>
	<onload condition="System.HasAddon(script.globalsearch) + !System.AddonIsEnabled(script.globalsearch)">EnableAddon(script.globalsearch)</onload>
	<onload condition="!System.HasAddon(script.globalsearch)">InstallAddon(script.globalsearch)</onload>
	<include>Animation_DialogPopupOpenClose</include>
	<controls>
		<!-- Empty dialog - just launches global search and closes -->
		<control type="group">
			<visible>false</visible>
		</control>
	</controls>
</window>
