<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1108">
    <defaultcontrol always="true">5100</defaultcontrol>
    <onload condition="String.IsEmpty(Skin.String(AIOStreams_SearchQuery))">Skin.SetString(AIOStreams_SearchQuery)</onload>
    <controls>
        <include>DefaultBackground</include>
        
        <!-- Background Dim -->
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture>colors/black_70.png</texture>
        </control>

        <!-- Header Section (logo/title/metadata) -->
        <control type="group">
            <zorder>1</zorder>
            <left>150</left>
            <top>30</top>
            <width>1100</width>
            <height>180</height>
            <animation effect="fade" start="0" end="100" time="400">Visible</animation>
            
            <!-- ClearLogo or Title -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>300</width>
                <height>100</height>
                <aspectratio align="left" aligny="bottom">keep</aspectratio>
                <texture background="true">$VAR[SearchResultsClearLogo]</texture>
                <visible>!String.IsEqual($VAR[SearchResultsClearLogo],None) + !String.IsEmpty($VAR[SearchResultsClearLogo])</visible>
            </control>
            
            <control type="label">
                <left>0</left>
                <top>0</top>
                <width>800</width>
                <height>100</height>
                <font>font45_title</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$VAR[SearchResultsTitle]</label>
                <shadowcolor>text_shadow</shadowcolor>
                <aligny>bottom</aligny>
                <visible>String.IsEqual($VAR[SearchResultsClearLogo],None) | String.IsEmpty($VAR[SearchResultsClearLogo]) | true</visible> <!-- TEMPORARILY ENABLED TO TEST TEXT -->
            </control>
            
            <!-- Metadata Line -->
            <control type="label">
                <left>0</left>
                <top>105</top>
                <width>800</width>
                <height>30</height>
                <font>font12</font>
                <textcolor>grey</textcolor>
                <label>$INFO[Skin.String(AIOStreams_SearchQuery),Search: ,  •  ]$VAR[SearchResultsYear]$VAR[SearchResultsRating,  •  ]$VAR[SearchResultsGenre,  •  ]</label>
            </control>
            
            <!-- Plot/Description -->
            <control type="textbox">
                <left>0</left>
                <top>140</top>
                <width>1500</width>
                <height>70</height>
                <font>font12</font>
                <textcolor>FFFFFFFF</textcolor>
                <label>$VAR[SearchResultsPlot]</label>
                <autoscroll delay="8000" time="3000" repeat="8000">true</autoscroll>
            </control>
        </control>

        <!-- NEXT 40%: MOVIES -->
        <control type="group">
            <left>150</left>
            <top>220</top>
            <width>1750</width>
            <height>410</height>
            <include content="WidgetListPoster">
                <param name="list_id" value="5100" />
                <param name="widget_header" value="MOVIES" />
                <param name="content_path" value="$INFO[Skin.String(AIOStreams_SearchQuery),plugin://plugin.video.aiostreams/?action=search_tab&amp;content_type=movie&amp;query=,&amp;widget=true]" />
                <param name="ondown_action1" value="SetFocus(5200)" />
            </include>
        </control>
        
        <!-- NEXT 40%: TV SHOWS -->
        <control type="group">
            <left>150</left>
            <top>650</top>
            <width>1750</width>
            <height>410</height>
            <include content="WidgetListPoster">
                <param name="list_id" value="5200" />
                <param name="widget_header" value="TV SHOWS" />
                <param name="content_path" value="$INFO[Skin.String(AIOStreams_SearchQuery),plugin://plugin.video.aiostreams/?action=search_tab&amp;content_type=series&amp;query=,&amp;widget=true]" />
                <param name="onup_action1" value="SetFocus(5100)" />
            </include>
        </control>

    </controls>
</window>
