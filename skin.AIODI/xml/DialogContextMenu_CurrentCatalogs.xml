<?xml version="1.0" encoding="UTF-8"?>
<!-- Context Menu for Current Catalogs (Remove, Move Up, Move Down) -->
<window id="1101" type="dialog">
    <defaultcontrol>1</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    
    <controls>
        <!-- Background Dimmer -->
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture colordiffuse="C0000000">colors/black.png</texture>
        </control>

        <control type="group">
            <right>0</right>
            <top>0</top>
            <width>500</width>
            <bottom>0</bottom>
            <animation type="WindowOpen">
                <effect type="slide" start="500" end="0" time="300" tween="cubic" easing="out" />
            </animation>
            <animation type="WindowClose">
                <effect type="slide" start="0" end="500" time="300" tween="cubic" easing="in" />
            </animation>
            
            <include>RightSideMenuBackground</include>
            
            <!-- Menu Items -->
            <control type="grouplist" id="1">
                <left>25</left>
                <top>150</top>
                <width>450</width>
                <height>900</height>
                <itemgap>10</itemgap>
                <orientation>vertical</orientation>
                
                <!-- Move Up -->
                <control type="button" id="2">
                    <width>450</width>
                    <height>65</height>
                    <label>Move Up</label>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <texturefocus colordiffuse="button_focus">lists/focus.png</texturefocus>
                    <texturenofocus colordiffuse="00FFFFFF">colors/white.png</texturenofocus>
                    <onclick>RunScript(special://skin/resources/lib/widget_manager.py,move_up)</onclick>
                    <onclick>Close</onclick>
                </control>
                
                <!-- Move Down -->
                <control type="button" id="3">
                    <width>450</width>
                    <height>65</height>
                    <label>Move Down</label>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <texturefocus colordiffuse="button_focus">lists/focus.png</texturefocus>
                    <texturenofocus colordiffuse="00FFFFFF">colors/white.png</texturenofocus>
                    <onclick>RunScript(special://skin/resources/lib/widget_manager.py,move_down)</onclick>
                    <onclick>Close</onclick>
                </control>
                
                <!-- Remove -->
                <control type="button" id="4">
                    <width>450</width>
                    <height>65</height>
                    <label>Remove from Page</label>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <texturefocus colordiffuse="button_focus">lists/focus.png</texturefocus>
                    <texturenofocus colordiffuse="00FFFFFF">colors/white.png</texturenofocus>
                    <onclick>RunScript(special://skin/resources/lib/widget_manager.py,remove_catalog)</onclick>
                    <onclick>Close</onclick>
                </control>
                
                <!-- Cancel -->
                <control type="button" id="5">
                    <width>450</width>
                    <height>65</height>
                    <label>Cancel</label>
                    <font>font13</font>
                    <textcolor>white</textcolor>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <texturefocus colordiffuse="button_focus">lists/focus.png</texturefocus>
                    <texturenofocus colordiffuse="00FFFFFF">colors/white.png</texturenofocus>
                    <onclick>Close</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>
