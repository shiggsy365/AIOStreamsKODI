<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol>1</defaultcontrol>
    <onload>AlarmClock(StartupDelay,ReplaceWindow($INFO[System.StartupWindow]),00:03,silent)</onload>
    <controls>
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture>special://skin/extras/splash.jpg</texture>
            <aspectratio>stretch</aspectratio>
            <animation effect="fade" start="0" end="100" time="1000" tween="sine" easing="inout">WindowOpen</animation>
        </control>
    </controls>
</window>
