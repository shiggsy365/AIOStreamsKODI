<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">3001</defaultcontrol>
    <controls>
        <control type="group">
            <centertop>50%</centertop>
            <centerleft>50%</centerleft>
            <width>600</width>
            <height>300</height>
            <include>OpenClose_Fade</include>

            <!-- Background -->
            <control type="image">
                <width>600</width>
                <height>300</height>
                <texture>dialogs/dialog-bg-nobo.png</texture>
                <bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
                <bordersize>20</bordersize>
            </control>

            <!-- Title -->
            <control type="label">
                <top>40</top>
                <width>600</width>
                <height>40</height>
                <align>center</align>
                <font>font30_title</font>
                <label>$LOCALIZE[31066]</label> <!-- "Are you still watching?" -->
            </control>
            
            <!-- Description -->
            <control type="textbox">
                <top>100</top>
                <left>40</left>
                <width>520</width>
                <height>80</height>
                <align>center</align>
                <font>font13</font>
                <label>$INFO[Window.Property(upnext.next_episode_title),Next: ,]</label>
                <textcolor>grey</textcolor>
            </control>

            <!-- Buttons -->
            <control type="grouplist" id="3000">
                <left>0</left>
                <top>200</top>
                <width>600</width>
                <height>60</height>
                <itemgap>20</itemgap>
                <align>center</align>
                <orientation>horizontal</orientation>

                <control type="button" id="3001">
                    <description>Yes</description>
                    <width>200</width>
                    <height>60</height>
                    <label>Yes</label>
                    <align>center</align>
                    <texturefocus border="5" colordiffuse="button_focus">buttons/button-fo.png</texturefocus>
                    <texturenofocus border="5">buttons/button-nofo.png</texturenofocus>
                </control>
                
                <control type="button" id="3002">
                    <description>No</description>
                    <width>200</width>
                    <height>60</height>
                    <label>No</label>
                    <align>center</align>
                    <texturefocus border="5" colordiffuse="button_focus">buttons/button-fo.png</texturefocus>
                    <texturenofocus border="5">buttons/button-nofo.png</texturenofocus>
                </control>
            </control>

        </control>
    </controls>
</window>
