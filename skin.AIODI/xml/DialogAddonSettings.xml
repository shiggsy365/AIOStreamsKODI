<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- Dimmer -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture colordiffuse="C0000000">colors/black.png</texture>
		</control>

		<!-- Right Side Panel (Width 1000) -->
		<control type="group">
			<left>920</left> <!-- 1920 - 1000 -->
			<top>0</top>
			<width>1000</width>
			<height>1080</height>
			<animation type="WindowOpen">
				<effect type="slide" start="1000" end="0" time="300" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1000" time="300" tween="cubic" easing="in" />
			</animation>

			<!-- Bg -->
			<control type="image">
				<width>1000</width>
				<height>1080</height>
				<texture colordiffuse="FF1A1A1A">colors/white.png</texture>
			</control>
			<control type="image">
				<left>-5</left>
				<width>5</width>
				<height>1080</height>
				<texture colordiffuse="FF000000">colors/white.png</texture>
			</control>

			<!-- Header -->
			<control type="label" id="2">
				<left>25</left>
				<top>30</top>
				<width>950</width>
				<height>40</height>
				<font>font45_title</font>
				<textcolor>FFFFFFFF</textcolor>
				<align>left</align>
			</control>
			<!-- Categories Area -->
			<control type="grouplist" id="3">
				<description>Categories Area</description>
				<left>25</left>
				<top>90</top>
				<width>300</width>
				<height>750</height>
				<itemgap>2</itemgap>
				<orientation>vertical</orientation>
				<onleft>Close</onleft>
				<onright>5</onright>
				<onup>20</onup>
				<ondown>20</ondown>
			</control>
			<control type="button" id="10">
				<description>Default Category Button</description>
				<height>60</height>
				<width>300</width>
				<textoffsetx>15</textoffsetx>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<texturefocus colordiffuse="button_focus">lists/focus.png</texturefocus>
				<texturenofocus colordiffuse="00FFFFFF">colors/white.png</texturenofocus>
			</control>

			<!-- Settings Panel Background -->
			<control type="image">
				<left>340</left>
				<top>90</top>
				<width>630</width>
				<height>850</height>
				<texture colordiffuse="FF252525">colors/white.png</texture>
			</control>

			<!-- Settings Grouplist -->
			<control type="grouplist" id="5">
				<description>control area</description>
				<left>350</left>
				<top>100</top>
				<width>610</width>
				<height>830</height>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<itemgap>0</itemgap>
			</control>
			<!-- Description Area -->
			<control type="textbox" id="6">
				<description>description area</description>
				<left>25</left>
				<top>960</top>
				<width>950</width>
				<height>90</height>
				<font>font12</font>
				<align>left</align>
				<textcolor>button_focus</textcolor>
				<autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
			</control>

			<!-- Setting Control Templates -->
			<control type="button" id="7">
				<description>Default Button</description>
				<include>DefaultSettingButton</include>
				<width>610</width>
			</control>
			<control type="radiobutton" id="8">
				<description>Default RadioButton</description>
				<include>DefaultSettingButton</include>
				<width>610</width>
				<textwidth>460</textwidth>
			</control>
			<control type="spincontrolex" id="9">
				<description>Default SpinControlex</description>
				<include>DefaultSettingButton</include>
				<width>610</width>
			</control>
			<control type="image" id="11">
				<description>separator image</description>
				<height>3</height>
				<width>610</width>
				<texture colordiffuse="AAAAAAAA" border="3">dialogs/separator-grey.png</texture>
			</control>
			<control type="edit" id="12">
				<include>DefaultSettingButton</include>
				<width>610</width>
			</control>
			<control type="sliderex" id="13">
				<description>Default Slider</description>
				<include>DefaultSettingButton</include>
				<width>610</width>
				<textwidth>400</textwidth>
			</control>
			<control type="label" id="14">
				<description>Default Label</description>
				<include>DefaultSettingLabel</include>
				<width>610</width>
			</control>
			<control type="colorbutton" id="15">
				<description>Default ColorButton</description>
				<include>DefaultSettingButton</include>
				<width>610</width>
			</control>

			<!-- Advanced Settings Toggle -->
			<control type="radiobutton" id="20">
				<left>25</left>
				<top>860</top>
				<width>300</width>
				<height>60</height>
				<font>font13</font>
				<aligny>center</aligny>
				<onclick>SettingsLevelChange</onclick>
				<textoffsetx>50</textoffsetx>
				<textoffsety>0</textoffsety>
				<texturefocus colordiffuse="button_focus">lists/focus.png</texturefocus>
				<texturenofocus colordiffuse="00FFFFFF">colors/white.png</texturenofocus>
				<radioposx>15</radioposx>
				<radioposy>0</radioposy>
				<radiowidth>24</radiowidth>
				<radioheight>24</radioheight>
				<onleft>Close</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<textureradioonfocus>icons/settings.png</textureradioonfocus>
				<textureradioonnofocus>icons/settings.png</textureradioonnofocus>
				<textureradioofffocus>icons/settings.png</textureradioofffocus>
				<textureradiooffnofocus>icons/settings.png</textureradiooffnofocus>
			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="60">
				<left>965</left>
				<top>100</top>
				<width>12</width>
				<height>830</height>
				<orientation>vertical</orientation>
				<onleft>5</onleft>
				<onright>Close</onright>
			</control>
		</control>
	</controls>
</window>
