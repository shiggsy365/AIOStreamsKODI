<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>5</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- Dimmer -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>1080</height>
			<texture colordiffuse="C0000000">colors/black.png</texture>
		</control>

		<!-- Right Side Panel (Width 900) -->
		<control type="group">
			<left>1020</left> <!-- 1920 - 900 -->
			<top>0</top>
			<width>900</width>
			<height>1080</height>
			<animation type="WindowOpen">
				<effect type="slide" start="900" end="0" time="300" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="900" time="300" tween="cubic" easing="in" />
			</animation>

			<!-- Bg -->
			<control type="image">
				<width>900</width>
				<height>1080</height>
				<texture colordiffuse="FF1A1A1A">colors/white.png</texture>
			</control>
			<control type="image">
				<left>-5</left>
				<width>5</width>
				<height>1080</height>
				<texture colordiffuse="FF000000">colors/white.png</texture>
			</control>
			
			<!-- Categories Area -->
			<control type="grouplist" id="3">
				<description>Categories Area</description>
				<left>20</left>
				<top>50</top>
				<width>250</width>
				<height>800</height>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				<onleft>9000</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
			</control>
			
			<!-- Defines for Categories (Default Category Button) -->
			<!-- Addon Settings logic injects buttons into ID 3 -->
			<control type="button" id="10">
				<description>Default Category Button</description>
				<height>80</height>
				<width>250</width>
				<textoffsetx>10</textoffsetx>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<texturenofocus border="40">buttons/dialogbutton-nofo.png</texturenofocus>
				<texturefocus border="40" colordiffuse="button_focus">buttons/dialogbutton-fo.png</texturefocus>
			</control>

			<!-- Settings Group ID 5 -->
			<control type="grouplist" id="5">
				<description>control area</description>
				<left>290</left>
				<top>50</top>
				<width>590</width>
				<height>800</height>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
			</control>
			
			<!-- Scrollbar -->
			<control type="scrollbar" id="60">
				<left>880</left>
				<top>50</top>
				<width>12</width>
				<height>800</height>
				<orientation>vertical</orientation>
				<onleft>5</onleft>
				<onright>9000</onright>
			</control>
			
			<!-- Description -->
			<control type="textbox" id="6">
				<description>description area</description>
				<left>20</left>
				<top>860</top>
				<width>860</width>
				<height>100</height>
				<font>font12</font>
				<align>justify</align>
				<textcolor>button_focus</textcolor>
				<autoscroll time="3000" delay="5000" repeat="5000">true</autoscroll>
			</control>

			<!-- Control Definitions -->
			<control type="button" id="7">
				<description>Default Button</description>
				<include>DefaultSettingButton</include>
				<width>590</width>
			</control>
			<control type="radiobutton" id="8">
				<description>Default RadioButton</description>
				<include>DefaultSettingButton</include>
				<width>590</width>
				<textwidth>400</textwidth>
			</control>
			<control type="spincontrolex" id="9">
				<description>Default SpinControlex</description>
				<include>DefaultSettingButton</include>
				<width>590</width>
			</control>
			<control type="image" id="11">
				<description>separator image</description>
				<height>3</height>
				<width>590</width>
				<texture colordiffuse="AAAAAAAA" border="3">dialogs/separator-grey.png</texture>
			</control>
			<control type="edit" id="12">
				<include>DefaultSettingButton</include>
				<width>590</width>
			</control>
			<control type="sliderex" id="13">
				<description>Default Slider</description>
				<include>DefaultSettingButton</include>
				<width>590</width>
				<textwidth>300</textwidth>
			</control>
			<control type="label" id="14">
				<description>Default Label</description>
				<include>DefaultSettingLabel</include>
				<width>590</width>
			</control>
			<control type="colorbutton" id="15">
				<description>Default ColorButton</description>
				<include>DefaultSettingButton</include>
				<width>590</width>
			</control>
			
			<!-- Level Switcher Button (ID 20) -->
			<!-- Floating bottom left -->
			<control type="radiobutton" id="20">
				<left>20</left>
				<top>980</top>
				<width>250</width>
				<height>80</height>
				<font>font13</font>
				<aligny>center</aligny>
				<onclick>SettingsLevelChange</onclick>
				<label>Level</label>
				<textoffsetx>50</textoffsetx>
				<texturenofocus />
				<radioposx>10</radioposx>
				<radioposy>20</radioposy>
				<radiowidth>40</radiowidth>
				<radioheight>40</radioheight>
				<textureradioonfocus>icons/settings.png</textureradioonfocus>
				<textureradioonnofocus>icons/settings.png</textureradioonnofocus>
				<textureradioofffocus>icons/settings.png</textureradioofffocus>
				<textureradiooffnofocus>icons/settings.png</textureradiooffnofocus>
			</control>

			<!-- Dialog Buttons (OK/Cancel) -->
			<control type="grouplist" id="9000">
				<left>300</left>
				<top>980</top>
				<orientation>horizontal</orientation>
				<width>580</width>
				<height>80</height>
				<itemgap>10</itemgap>
				<onleft>20</onleft>
				<onright>20</onright>
				<include content="DefaultDialogButton">
					<param name="id" value="28" />
					<param name="label" value="" />
					<param name="width" value="180" />
				</include>
				<include content="DefaultDialogButton">
					<param name="id" value="29" />
					<param name="label" value="" />
					<param name="width" value="180" />
				</include>
				<include content="DefaultDialogButton">
					<param name="id" value="30" />
					<param name="label" value="" />
					<param name="width" value="180" />
				</include>
			</control>
		</control>
	</controls>
</window>
