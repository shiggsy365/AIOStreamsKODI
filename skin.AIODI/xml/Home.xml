</control>

<control type="fixedlist" id="9000">
<left>0</left>
<top>120</top>
<width>120</width>
<bottom>60</bottom>
<movement>7</movement>
<focusposition>0</focusposition>
<onup>9001</onup>
<oncontextmenu>ActivateWindow(1115)</oncontextmenu>
<onrightclick>ActivateWindow(1115)</onrightclick>
<onright>SetFocus($INFO[Container(9000).ListItem.Property(menu_id)])</onright>
<focusedlayout height="85">
<control type="group">
<control type="image">
<left>24</left>
<top>7</top>
<width>71</width>
<height>71</height>
<texture>$INFO[ListItem.Property(icon_red)]</texture>
</control>
</control>
</focusedlayout>
<itemlayout height="85">
<control type="image">
<left>24</left>
<top>7</top>
<width>71</width>
<height>71</height>
<texture>$INFO[ListItem.Icon]</texture>
</control>
</itemlayout>
<content>
	<item>
		<label>Search</label>
		<onclick>noop</onclick>
		<property name="menu_id">noop</property>
		<thumb>icons/sidemenu/search_white.png</thumb>
		<property name="icon_red">icons/sidemenu/search_red.png</property>
		<property name="id">search</property>
	</item>
	<item>
		<label>Spacer</label>
		<enable>false</enable>
	</item>
	<item>
		<label>$LOCALIZE[10000]</label>
