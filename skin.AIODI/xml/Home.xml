<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- Initialize page to Home on load -->
	<onload>SetProperty(CurrentPage,home,home)</onload>
	
	<!-- Initialize widget order strings if empty -->
	<onload condition="String.IsEmpty(Skin.String(Home.WidgetOrder))">Skin.SetString(Home.WidgetOrder,0,1,2)</onload>
	<onload condition="String.IsEmpty(Skin.String(Movies.WidgetOrder))">Skin.SetString(Movies.WidgetOrder,0,1,2,3)</onload>
	<onload condition="String.IsEmpty(Skin.String(Series.WidgetOrder))">Skin.SetString(Series.WidgetOrder,0,1,2,3)</onload>
	
	<defaultcontrol>9001</defaultcontrol>
	<backgroundcolor>#141414</backgroundcolor>
	
	<controls>
		<!-- Background -->
		<control type="image">
			<include>FullScreenDimensions</include>
			<texture colordiffuse="#141414">colors/white.png</texture>
		</control>
		
		<!-- Top Menu Bar -->
		<include>NetflixMenuBar</include>
		
		<!-- HOME PAGE -->
		<control type="group">
			<visible>String.IsEqual(Window(Home).Property(CurrentPage),home)</visible>
			<animation effect="fade" time="300">VisibleChange</animation>
			
			<control type="grouplist" id="5000">
				<include>NetflixWidgetContainer</include>
				
				<!-- Trakt Next Up -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5001" />
					<param name="row_label" value="Continue Watching" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=trakt_next_up" />
					<param name="visible_condition" value="!Skin.HasSetting(Home.HideWidget0)" />
				</include>
				
				<!-- Trakt Watchlist Movies -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5002" />
					<param name="row_label" value="My Movie Watchlist" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=trakt_watchlist&amp;media_type=movies" />
					<param name="visible_condition" value="!Skin.HasSetting(Home.HideWidget1)" />
				</include>
				
				<!-- Trakt Watchlist Series -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5003" />
					<param name="row_label" value="My Series Watchlist" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=trakt_watchlist&amp;media_type=shows" />
					<param name="visible_condition" value="!Skin.HasSetting(Home.HideWidget2)" />
				</include>
			</control>
		</control>
		
		<!-- MOVIES PAGE -->
		<control type="group">
			<visible>String.IsEqual(Window(Home).Property(CurrentPage),movies)</visible>
			<animation effect="fade" time="300">VisibleChange</animation>
			
			<control type="grouplist" id="5000">
				<include>NetflixWidgetContainer</include>
				
				<!-- Movie Catalog 1 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5101" />
					<param name="row_label" value="$INFO[Window(Home).Property(movie_catalog_0_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=0&amp;content_type=movie" />
					<param name="visible_condition" value="!Skin.HasSetting(Movies.HideWidget0)" />
				</include>
				
				<!-- Movie Catalog 2 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5102" />
					<param name="row_label" value="$INFO[Window(Home).Property(movie_catalog_1_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=1&amp;content_type=movie" />
					<param name="visible_condition" value="!Skin.HasSetting(Movies.HideWidget1)" />
				</include>
				
				<!-- Movie Catalog 3 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5103" />
					<param name="row_label" value="$INFO[Window(Home).Property(movie_catalog_2_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=2&amp;content_type=movie" />
					<param name="visible_condition" value="!Skin.HasSetting(Movies.HideWidget2)" />
				</include>
				
				<!-- Movie Catalog 4 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5104" />
					<param name="row_label" value="$INFO[Window(Home).Property(movie_catalog_3_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=3&amp;content_type=movie" />
					<param name="visible_condition" value="!Skin.HasSetting(Movies.HideWidget3)" />
				</include>
			</control>
		</control>
		
		<!-- SERIES PAGE -->
		<control type="group">
			<visible>String.IsEqual(Window(Home).Property(CurrentPage),series)</visible>
			<animation effect="fade" time="300">VisibleChange</animation>
			
			<control type="grouplist" id="5000">
				<include>NetflixWidgetContainer</include>
				
				<!-- Series Catalog 1 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5201" />
					<param name="row_label" value="$INFO[Window(Home).Property(series_catalog_0_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=0&amp;content_type=series" />
					<param name="visible_condition" value="!Skin.HasSetting(Series.HideWidget0)" />
				</include>
				
				<!-- Series Catalog 2 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5202" />
					<param name="row_label" value="$INFO[Window(Home).Property(series_catalog_1_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=1&amp;content_type=series" />
					<param name="visible_condition" value="!Skin.HasSetting(Series.HideWidget1)" />
				</include>
				
				<!-- Series Catalog 3 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5203" />
					<param name="row_label" value="$INFO[Window(Home).Property(series_catalog_2_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=2&amp;content_type=series" />
					<param name="visible_condition" value="!Skin.HasSetting(Series.HideWidget2)" />
				</include>
				
				<!-- Series Catalog 4 -->
				<include content="NetflixWidgetRow">
					<param name="row_id" value="5204" />
					<param name="row_label" value="$INFO[Window(Home).Property(series_catalog_3_name)]" />
					<param name="content_path" value="plugin://plugin.video.aiostreams/?action=smart_widget&amp;index=3&amp;content_type=series" />
					<param name="visible_condition" value="!Skin.HasSetting(Series.HideWidget3)" />
				</include>
			</control>
		</control>
		
		<!-- TV PAGE -->
		<control type="group">
			<visible>String.IsEqual(Window(Home).Property(CurrentPage),tv)</visible>
			<animation effect="fade" time="300">VisibleChange</animation>
			
			<control type="label">
				<left>60</left>
				<top>150</top>
				<width>1800</width>
				<height>60</height>
				<font>font27_title</font>
				<textcolor>#FFFFFF</textcolor>
				<label>Live TV</label>
			</control>
			
			<control type="label">
				<left>60</left>
				<top>220</top>
				<width>1800</width>
				<height>40</height>
				<font>font13</font>
				<textcolor>#B3B3B3</textcolor>
				<label>Press OK to open Live TV channels</label>
			</control>
			
			<control type="button" id="5000">
				<left>60</left>
				<top>280</top>
				<width>300</width>
				<height>60</height>
				<font>font13_title</font>
				<textcolor>#FFFFFF</textcolor>
				<focusedcolor>#000000</focusedcolor>
				<label>Open Live TV</label>
				<texturefocus colordiffuse="#E50914">colors/white.png</texturefocus>
				<texturenofocus colordiffuse="#333333">colors/white.png</texturenofocus>
				<onclick>ActivateWindow(TVChannels)</onclick>
				<onup>SetFocus(9001)</onup>
			</control>
		</control>
		
		<!-- MUSIC PAGE -->
		<control type="group">
			<visible>String.IsEqual(Window(Home).Property(CurrentPage),music)</visible>
			<animation effect="fade" time="300">VisibleChange</animation>
			
			<control type="label">
				<left>60</left>
				<top>150</top>
				<width>1800</width>
				<height>60</height>
				<font>font27_title</font>
				<textcolor>#FFFFFF</textcolor>
				<label>Music</label>
			</control>
			
			<control type="label">
				<left>60</left>
				<top>220</top>
				<width>1800</width>
				<height>40</height>
				<font>font13</font>
				<textcolor>#B3B3B3</textcolor>
				<label>Press OK to browse your music library</label>
			</control>
			
			<control type="button" id="5000">
				<left>60</left>
				<top>280</top>
				<width>300</width>
				<height>60</height>
				<font>font13_title</font>
				<textcolor>#FFFFFF</textcolor>
				<focusedcolor>#000000</focusedcolor>
				<label>Open Music</label>
				<texturefocus colordiffuse="#E50914">colors/white.png</texturefocus>
				<texturenofocus colordiffuse="#333333">colors/white.png</texturenofocus>
				<onclick>ActivateWindow(Music,root,return)</onclick>
				<onup>SetFocus(9001)</onup>
			</control>
		</control>
		
		<!-- Bottom Bar (optional - for now playing info) -->
		<include>BottomBar</include>
	</controls>
</window>
