<control type="group">
<animation effect="fade" start="100" end="0" time="200" tween="sine" condition="$EXP[infodialog_active]">Conditional</animation>

<!-- Sidebar Background -->
<control type="image">
	<left>0</left>
	<top>0</top>
	<width>120</width>
	<bottom>0</bottom>
	<texture colordiffuse="FF000000">colors/white.png</texture>
	<animation effect="slide" start="-120,0" end="0,0" time="300">WindowOpen</animation>
</control>

<!-- AIOStreams Logo -->
<control type="button" id="9001">
	<left>10</left>
	<top>20</top>
	<width>100</width>
	<height>60</height>
	<texturefocus>special://skin/media/aiostreams_logo.png</texturefocus>
	<texturenofocus>special://skin/media/aiostreams_logo.png</texturenofocus>
	<onup>noop</onup>
	<ondown>9000</ondown>
