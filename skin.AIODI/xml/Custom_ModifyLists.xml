                    <align>center</align>
                    <onclick>SetProperty(CurrentPage,home)</onclick>
                    <onclick>RunScript(special://skin/resources/lib/widget_manager.py,load_page,home)</onclick>
                    <texturefocus colordiffuse="button_focus">colors/white.png</texturefocus>
                    <textcolor>FFFFFFFF</textcolor>
                    <focusedcolor>FF000000</focusedcolor>
