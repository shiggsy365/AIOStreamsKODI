            <control type="grouplist" id="2000">
                <left>0</left>
                <top>80</top>
                <width>1720</width>
                <height>60</height>
                <orientation>horizontal</orientation>
                <itemgap>20</itemgap>
                <align>center</align>
                <ondown>3000</ondown>
                
                <control type="button" id="2001">
                    <width>400</width>
                    <height>60</height>
                    <font>font13</font>
