<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1106">
    <defaultcontrol always="true">9000</defaultcontrol>
    <coordinates>
        <left>0</left>
        <top>0</top>
    </coordinates>
    
    <!-- Background -->
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture>colors/white.png</texture>
            <colordiffuse>FF2A2A2A</colordiffuse>
            <animation effect="fade" start="0" end="95" time="200">WindowOpen</animation>
            <animation effect="fade" start="95" end="0" time="200">WindowClose</animation>
        </control>
        
        <!-- Main Dialog Container -->
        <control type="group">
            <left>360</left>
            <top>240</top>
            <width>1200</width>
            <height>600</height>
            <animation effect="zoom" start="95" end="100" center="960,540" time="200">WindowOpen</animation>
            <animation effect="zoom" start="100" end="95" center="960,540" time="200">WindowClose</animation>
            
            <!-- Dialog Background -->
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1200</width>
                <height>600</height>
                <texture border="40">dialogs/dialog-panel.png</texture>
            </control>
            
            <!-- Header -->
            <control type="label">
                <left>40</left>
                <top>30</top>
                <width>1120</width>
                <height>60</height>
                <font>font30_title</font>
                <label>Global Search</label>
                <textcolor>FFFFFFFF</textcolor>
                <align>center</align>
            </control>
            
            <!-- Close Button -->
            <control type="button" id="9999">
                <left>1120</left>
                <top>30</top>
                <width>60</width>
                <height>60</height>
                <label></label>
                <font>-</font>
                <texturefocus border="21" colordiffuse="button_focus">buttons/button-fo.png</texturefocus>
                <texturenofocus border="21">buttons/button-nofo.png</texturenofocus>
                <ondown>9000</ondown>
                <onleft>9000</onleft>
                <onclick>Dialog.Close(1106)</onclick>
            </control>
            
            <!-- Search Input -->
            <control type="edit" id="9000">
                <left>40</left>
                <top>120</top>
                <width>1120</width>
                <height>80</height>
                <font>font25</font>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FF00B4FF</focusedcolor>
                <texturefocus border="5">buttons/button-focus.png</texturefocus>
                <texturenofocus border="5">buttons/button-nofocus.png</texturenofocus>
                <label>Enter search term...</label>
                <hinttext>Search for movies, TV shows, or videos</hinttext>
                <onup>9999</onup>
                <ondown>9010</ondown>
            </control>
            
            <!-- Recent Searches Label -->
            <control type="label">
                <left>40</left>
                <top>230</top>
                <width>1120</width>
                <height>40</height>
                <font>font20</font>
                <label>Recent Searches:</label>
                <textcolor>FFAAAAAA</textcolor>
            </control>
            
            <!-- Recent Searches List -->
            <control type="list" id="9010">
                <left>40</left>
                <top>280</top>
                <width>1120</width>
                <height>210</height>
                <onup>9000</onup>
                <ondown>9020</ondown>
                <itemlayout height="35">
                    <control type="label">
                        <left>10</left>
                        <top>0</top>
                        <width>1100</width>
                        <height>35</height>
                        <font>font16</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FFCCCCCC</textcolor>
                    </control>
                </itemlayout>
                <focusedlayout height="35">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>1120</width>
                        <height>35</height>
                        <texture>lists/list-focus.png</texture>
                    </control>
                    <control type="label">
                        <left>10</left>
                        <top>0</top>
                        <width>1100</width>
                        <height>35</height>
                        <font>font16</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>FF00B4FF</textcolor>
                    </control>
                </focusedlayout>
                <content>
                    <item>
                        <label>Breaking Bad</label>
                        <onclick>RunScript(special://skin/resources/lib/global_search.py,Breaking Bad)</onclick>
                    </item>
                    <item>
                        <label>The Matrix</label>
                        <onclick>RunScript(special://skin/resources/lib/global_search.py,The Matrix)</onclick>
                    </item>
                    <item>
                        <label>Inception</label>
                        <onclick>RunScript(special://skin/resources/lib/global_search.py,Inception)</onclick>
                    </item>
                </content>
            </control>
            
            <!-- Search Button -->
            <control type="button" id="9020">
                <left>390</left>
                <top>520</top>
                <width>420</width>
                <height>60</height>
                <font>font20</font>
                <label>Search</label>
                <textcolor>FFFFFFFF</textcolor>
                <focusedcolor>FFFFFFFF</focusedcolor>
                <texturefocus border="21" colordiffuse="button_focus">buttons/button-fo.png</texturefocus>
                <texturenofocus border="21">buttons/button-nofo.png</texturenofocus>
                <align>center</align>
                <aligny>center</aligny>
                <onup>9010</onup>
                <onclick>RunScript(special://skin/resources/lib/global_search.py)</onclick>
            </control>
        </control>
    </controls>
</window>
