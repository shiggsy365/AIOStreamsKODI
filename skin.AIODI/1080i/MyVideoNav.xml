<?xml version="1.0"encoding="UTF-8"?>
<window>
    <include file="Includes.xml"/>
    <defaultcontrol always="true">9001</defaultcontrol>
    <views>50</views>
    <controls>
        <!--Background -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="main_bg_100">common/white.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>

        <!--Top Navigation Bar -->
        <control type="group">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>120</height>
            
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>120</height>
                <texture colordiffuse="main_bg_90">common/white.png</texture>
                <aspectratio>stretch</aspectratio>
            </control>
            
            <control type="label">
                <left>60</left>
                <top>30</top>
                <width>300</width>
                <height>60</height>
                <font>font37_title</font>
                <textcolor>main_fg_100</textcolor>
                <label>AIODI</label>
            </control>
            
            <control type="grouplist"id="9000">
                <left>500</left>
                <top>30</top>
                <width>1200</width>
                <height>60</height>
                <ondown>50</ondown>
                <orientation>horizontal</orientation>
                <itemgap>20</itemgap>
                
                <control type="button"id="9001">
                    <width>150</width>
                    <height>60</height>
                    <font>font30</font>
                    <label>Home</label>
                    <textcolor>main_fg_70</textcolor>
                    <focusedcolor>main_fg_100</focusedcolor>
                    <onclick>ActivateWindow(Home)</onclick>
                </control>
                
                <control type="button"id="9002">
                    <width>150</width>
                    <height>60</height>
                    <font>font30</font>
                    <label>Movies</label>
                    <textcolor>main_fg_70</textcolor>
                    <focusedcolor>main_fg_100</focusedcolor>
                    <onclick>ActivateWindow(Videos,plugin://plugin.video.aiostreams/?action=movie_lists,return)</onclick>
                </control>
                
                <control type="button"id="9003">
                    <width>150</width>
                    <height>60</height>
                    <font>font30</font>
                    <label>TV Shows</label>
                    <textcolor>main_fg_70</textcolor>
                    <focusedcolor>main_fg_100</focusedcolor>
                    <onclick>ActivateWindow(Videos,plugin://plugin.video.aiostreams/?action=series_lists,return)</onclick>
                </control>
                
                <control type="button"id="9004">
                    <width>150</width>
                    <height>60</height>
                    <font>font30</font>
                    <label>Search</label>
                    <textcolor>main_fg_70</textcolor>
                    <focusedcolor>main_fg_100</focusedcolor>
                    <onclick>ActivateWindow(Videos,plugin://plugin.video.aiostreams/?action=search_unified,return)</onclick>
                </control>
                
                <control type="button"id="9005">
                    <width>150</width>
                    <height>60</height>
                    <font>font30</font>
                    <label>Settings</label>
                    <textcolor>main_fg_70</textcolor>
                    <focusedcolor>main_fg_100</focusedcolor>
                    <onclick>ActivateWindow(skinsettings)</onclick>
                </control>
            </control>
        </control>

        <!--Content Area -->
        <control type="list"id="50">
            <left>60</left>
            <top>180</top>
            <width>1800</width>
            <height>840</height>
            <onup>9000</onup>
            <orientation>vertical</orientation>
            <scrolltime>200</scrolltime>

            <!--Item Layout -->
            <itemlayout height="140"width="1800">
                <control type="image">
                    <left>10</left>
                    <top>10</top>
                    <width>90</width>
                    <height>120</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(poster)]</texture>
                </control>
                <control type="label">
                    <left>120</left>
                    <top>20</top>
                    <width>1660</width>
                    <height>40</height>
                    <font>font30</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <left>120</left>
                    <top>70</top>
                    <width>1660</width>
                    <height>30</height>
                    <font>font20</font>
                    <textcolor>main_fg_70</textcolor>
                    <label>$INFO[ListItem.Plot]</label>
                </control>
            </itemlayout>

            <!--Focused Layout -->
            <focusedlayout height="140"width="1800">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>1800</width>
                    <height>140</height>
                    <texture colordiffuse="main_bg_70">common/white.png</texture>
                </control>
                <control type="image">
                    <left>10</left>
                    <top>10</top>
                    <width>90</width>
                    <height>120</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(poster)]</texture>
                    <bordertexture border="4"colordiffuse="main_fg_100">common/white.png</bordertexture>
                    <bordersize>2</bordersize>
                </control>
                <control type="label">
                    <left>120</left>
                    <top>20</top>
                    <width>1660</width>
                    <height>40</height>
                    <font>font30</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <left>120</left>
                    <top>70</top>
                    <width>1660</width>
                    <height>30</height>
                    <font>font20</font>
                    <textcolor>main_fg_100</textcolor>
                    <label>$INFO[ListItem.Plot]</label>
                </control>
            </focusedlayout>
        </control>
        <control type="button"id="501">
            <left>60</left>
            <top>180</top>
            <width>1800</width>
            <height>60</height>
            <font>font25</font>
            <label>No content found in this view</label>
            <textcolor>main_fg_70</textcolor>
            <onclick>SetFocus(9000)</onclick>
            <visible>Integer.IsEqual(Container(50).NumItems,0) + !Container(50).IsUpdating</visible>
        </control>
        
    </controls>
</window>
