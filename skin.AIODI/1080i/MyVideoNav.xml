<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <views>50</views>
    <onload>RunScript(special://skin/scripts/widget_manager.py,action=update,page=movies)</onload>
    <controls>
        <!-- Background -->
        <include>CommonBackground</include>
        <include>NavigationBar</include>

        <!-- Content Area -->
        <control type="group">
            <left>60</left>
            <top>180</top>
            <width>1800</width>
            <height>840</height>

            <!-- List View -->
            <control type="list" id="50">
                <left>0</left>
                <top>0</top>
                <width>1800</width>
                <height>840</height>
                <onup>9000</onup>
                <orientation>vertical</orientation>
                <scrolltime>200</scrolltime>

                <!-- Item Layout -->
                <itemlayout height="140" width="1800">
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <width>90</width>
                        <height>120</height>
                        <aspectratio>scale</aspectratio>
                        <texture background="true">$INFO[ListItem.Art(poster)]</texture>
                    </control>
                    <control type="label">
                        <left>120</left>
                        <top>20</top>
                        <width>1660</width>
                        <height>40</height>
                        <font>font30</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>120</left>
                        <top>70</top>
                        <width>1660</width>
                        <height>30</height>
                        <font>font20</font>
                        <textcolor>FFAAAAAA</textcolor>
                        <label>$INFO[ListItem.Plot]</label>
                    </control>
                </itemlayout>

                <!-- Focused Layout -->
                <focusedlayout height="140" width="1800">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>1800</width>
                        <height>140</height>
                        <texture colordiffuse="441E90FF">common/white.png</texture>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <width>90</width>
                        <height>120</height>
                        <aspectratio>scale</aspectratio>
                        <texture background="true">$INFO[ListItem.Art(poster)]</texture>
                        <bordertexture border="4" colordiffuse="FF1E90FF">common/border.png</bordertexture>
                        <bordersize>4</bordersize>
                    </control>
                    <control type="label">
                        <left>120</left>
                        <top>20</top>
                        <width>1660</width>
                        <height>40</height>
                        <font>font30</font>
                        <textcolor>FF1E90FF</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <left>120</left>
                        <top>70</top>
                        <width>1660</width>
                        <height>30</height>
                        <font>font20</font>
                        <textcolor>FFFFFFFF</textcolor>
                        <label>$INFO[ListItem.Plot]</label>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
