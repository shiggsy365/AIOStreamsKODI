                <top>0</top>
                <width>450</width>
                <height>960</height>
                
                <control type="image">
                    <width>450</width>
                    <height>100%</height>
                    <texture></texture>
                </control>

                <control type="list" id="9000">
                    <left>20</left>
                    <top>40</top>
                    <width>410</width>
                    <height>800</height>
                    <onleft>noop</onleft>
                    <onright>10000</onright>
                    <onup>9000</onup>
                    <ondown>9000</ondown>
                    <itemlayout height="80">
                        <control type="label">
                            <left>20</left>
                            <width>370</width>
                            <height>80</height>
                            <font>font30</font>
                            <textcolor>FFFFFFFF</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <aligny>center</aligny>
