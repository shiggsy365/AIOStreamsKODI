                        </control>
                    </focusedlayout>
                    <content>
                        <item id="1">
                            <label>$LOCALIZE[128]</label ><!--General -->
                        </item>
                        <item id="2">
                            <label>$LOCALIZE[31061]</label ><!--Background -->
                        </item>
                        <item id="3">
                            <label>$LOCALIZE[31159]</label ><!--Home Menu -->
                        </item>
                        <item id="4">
                            <label>$LOCALIZE[31170]</label ><!--OSD -->
                        </item>
                    </content>
                </control>
            </control>

