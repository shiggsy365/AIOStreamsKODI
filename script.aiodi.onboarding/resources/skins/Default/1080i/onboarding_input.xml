<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3</defaultcontrol>
    <include>Animation_DialogPopupOpenClose</include>
    <controls>
        <!-- Full Screen Dimmer -->
        <control type="image">
            <include>FullScreenDimensions</include>
            <texture colordiffuse="FF000000">colors/black.png</texture>
        </control>

        <control type="group">
            <top>90</top>
            <centerleft>50%</centerleft>
            <width>1820</width>
            <height>900</height>
            <include>Animation_DialogPopupVisible</include>
            
            <!-- Standard Skin Frame -->
            <include content="DialogBackgroundCommons">
                <param name="width" value="1820" />
                <param name="height" value="900" />
                <param name="header_label" value="Integration Setup" />
                <param name="header_id" value="2" />
            </include>

            <!-- Categories Area (ID 3) -->
            <control type="list" id="3">
                <description>Categories Area</description>
                <left>29</left>
                <top>80</top>
                <width>400</width>
                <height>740</height>
                <onleft>9000</onleft>
                <onright>5</onright>
                <onup>3</onup>
                <ondown>3</ondown>
                <pagecontrol>-</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="75" width="400">
                    <control type="label">
                        <left>20</left>
                        <top>0</top>
                        <width>360</width>
                        <height>75</height>
                        <font>font13</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>white</textcolor>
                        <aligny>center</aligny>
                    </control>
                </itemlayout>
                <focusedlayout height="75" width="400">
                    <control type="image">
                        <width>400</width>
                        <height>75</height>
                        <texture colordiffuse="button_focus">lists/focus.png</texture>
                    </control>
                    <control type="label">
                        <left>20</left>
                        <top>0</top>
                        <width>360</width>
                        <height>75</height>
                        <font>font13_title</font>
                        <label>$INFO[ListItem.Label]</label>
                        <textcolor>white</textcolor>
                        <aligny>center</aligny>
                    </control>
                </focusedlayout>
            </control>

            <!-- Settings Content Panel -->
            <control type="image">
                <left>410</left>
                <top>80</top>
                <width>1100</width>
                <height>740</height>
                <texture border="40" colordiffuse="40FFFFFF">buttons/dialogbutton-nofo.png</texture>
            </control>

            <!-- Settings Grouplist (ID 5) -->
            <control type="grouplist" id="5">
                <description>control area</description>
                <left>420</left>
                <top>100</top>
                <width>1080</width>
                <height>700</height>
                <pagecontrol>60</pagecontrol>
                <onleft>3</onleft>
                <onright>60</onright>
                <onup>5</onup>
                <ondown>5</ondown>
                <itemgap>0</itemgap>

                <!-- AIOStreams Pane -->
                <control type="group">
                    <width>1080</width><height>460</height>
                    <visible>String.IsEqual(Window.Property(current_cat),aiostreams)</visible>
                    <control type="label"><include>DefaultSettingLabel</include><width>1080</width><label>AIOStreams Configuration</label></control>
                    <control type="grouplist">
                        <left>0</left><top>50</top><width>1080</width><height>410</height>
                        <control type="edit" id="10001">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Host Base URL</label>
                        </control>
                        <control type="edit" id="10002">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Instance UUID</label>
                        </control>
                        <control type="edit" id="10003">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Password</label>
                        </control>
                        <control type="button" id="10004">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Default Behavior: show_streams</label>
                        </control>
                        <control type="edit" id="10005">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Subtitles (eng,spa)</label>
                        </control>
                        <control type="radiobutton" id="10006">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Enable UpNext Integration</label>
                        </control>
                    </control>
                </control>

                <!-- Trakt Pane -->
                <control type="group">
                    <width>1080</width><height>190</height>
                    <visible>String.IsEqual(Window.Property(current_cat),trakt)</visible>
                    <control type="label"><include>DefaultSettingLabel</include><width>1080</width><label>Trakt Configuration</label></control>
                    <control type="grouplist">
                        <left>0</left><top>50</top><width>1080</width><height>140</height>
                        <control type="edit" id="11001">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Client ID</label>
                        </control>
                        <control type="edit" id="11002">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>Client Secret</label>
                        </control>
                    </control>
                </control>

                <!-- YouTube Pane -->
                <control type="group">
                    <width>1080</width><height>260</height>
                    <visible>String.IsEqual(Window.Property(current_cat),youtube)</visible>
                    <control type="label"><include>DefaultSettingLabel</include><width>1080</width><label>YouTube Configuration</label></control>
                    <control type="grouplist">
                        <left>0</left><top>50</top><width>1080</width><height>210</height>
                        <control type="edit" id="12001">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>API Key</label>
                        </control>
                        <control type="edit" id="12002">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>API ID</label>
                        </control>
                        <control type="edit" id="12003">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>API Secret</label>
                        </control>
                    </control>
                </control>

                <!-- IPTV Pane -->
                <control type="group">
                    <width>1080</width><height>190</height>
                    <visible>String.IsEqual(Window.Property(current_cat),iptv)</visible>
                    <control type="label"><include>DefaultSettingLabel</include><width>1080</width><label>IPTV Simple Configuration</label></control>
                    <control type="grouplist">
                        <left>0</left><top>50</top><width>1080</width><height>140</height>
                        <control type="edit" id="13001">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>M3U URL</label>
                        </control>
                        <control type="edit" id="13002">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>EPG URL</label>
                        </control>
                    </control>
                </control>

                <!-- IMVDb Pane -->
                <control type="group">
                    <width>1080</width><height>120</height>
                    <visible>String.IsEqual(Window.Property(current_cat),imvdb)</visible>
                    <control type="label"><include>DefaultSettingLabel</include><width>1080</width><label>IMVDb Configuration</label></control>
                    <control type="grouplist">
                        <left>0</left><top>50</top><width>1080</width><height>70</height>
                        <control type="edit" id="14001">
                            <width>1080</width><height>70</height>
                            <include>DefaultSettingButton</include>
                            <label>API Key</label>
                        </control>
                    </control>
                </control>
            </control>

            <!-- Scrollbar (ID 60) -->
            <control type="scrollbar" id="60">
                <left>1490</left>
                <top>100</top>
                <width>12</width>
                <height>700</height>
                <orientation>vertical</orientation>
                <onleft>5</onleft>
                <onright>9000</onright>
            </control>

            <!-- Action Buttons (ID 9000) -->
            <control type="grouplist" id="9000">
                <left>1510</left>
                <top>92</top>
                <orientation>vertical</orientation>
                <width>300</width>
                <height>300</height>
                <itemgap>-10</itemgap>
                <onleft>5</onleft>
                <onright>3</onright>
                <include content="DefaultDialogButton">
                    <param name="id" value="9000" />
                    <param name="label" value="INSTALL" />
                </include>
                <include content="DefaultDialogButton">
                    <param name="id" value="9001" />
                    <param name="label" value="CANCEL" />
                </include>
            </control>
        </control>
    </controls>


</window>
