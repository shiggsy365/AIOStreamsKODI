<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <!-- Main Container -->
        <control type="group">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>

            <!-- Background -->
            <control type="image">
                <include>FullScreenDimensions</include>
                <texture colordiffuse="FF000000">onboarding_bg.jpg</texture>
                <aspectratio>stretch</aspectratio>
            </control>

            <!-- Dialog Glass Frame -->
            <control type="group">
                <top>140</top>
                <centerleft>50%</centerleft>
                <width>1600</width>
                <height>800</height>

                <control type="image">
                    <width>1600</width>
                    <height>800</height>
                    <texture border="40" colordiffuse="DD000000">buttons/dialogbutton-nofo.png</texture>
                </control>

                <!-- Header -->
                <control type="label">
                    <left>40</left>
                    <top>20</top>
                    <width>1520</width>
                    <height>50</height>
                    <font>font30_title</font>
                    <label>Integration Setup</label>
                    <align>left</align>
                </control>

                <!-- Sidebar: Categories (ID 10) -->
                <control type="list" id="10">
                    <left>30</left>
                    <top>100</top>
                    <width>380</width>
                    <height>600</height>
                    <onright>20</onright>
                    <onleft>9000</onleft>
                    <onup>10</onup>
                    <ondown>10</ondown>
                    <pagecontrol>-</pagecontrol>
                    <scrolltime>200</scrolltime>
                    <itemlayout height="80" width="380">
                        <control type="label">
                            <left>20</left>
                            <top>0</top>
                            <width>340</width>
                            <height>80</height>
                            <font>font13</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>white</textcolor>
                            <aligny>center</aligny>
                        </control>
                    </itemlayout>
                    <focusedlayout height="80" width="380">
                        <control type="image">
                            <width>380</width>
                            <height>80</height>
                            <texture border="20">buttons/focus.png</texture>
                        </control>
                        <control type="label">
                            <left>20</left>
                            <top>0</top>
                            <width>340</width>
                            <height>80</height>
                            <font>font13_title</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>white</textcolor>
                            <aligny>center</aligny>
                        </control>
                    </focusedlayout>
                </control>

                <!-- Center: Unified Settings Pane (ID 20) -->
                <control type="group">
                    <left>430</left>
                    <top>100</top>
                    <width>900</width>
                    <height>660</height>

                    <control type="image">
                        <width>900</width>
                        <height>660</height>
                        <texture border="40" colordiffuse="40FFFFFF">buttons/dialogbutton-nofo.png</texture>
                    </control>

                    <control type="grouplist" id="20">
                        <left>20</left><top>20</top><width>860</width><height>620</height><itemgap>10</itemgap><orientation>vertical</orientation>
                        <onleft>10</onleft><onright>60</onright><onup>20</onup><ondown>20</ondown>
                        <pagecontrol>60</pagecontrol>
                        <scrolltime>200</scrolltime>

                        <!-- AIOStreams Pane -->
                        <control type="group">
                            <width>860</width><height>460</height>
                            <visible>String.IsEqual(Container(10).ListItem.Property(type),aiostreams)</visible>
                            <control type="label"><width>860</width><height>40</height><font>font13_title</font><label>AIOStreams Configuration</label><textcolor>yellow</textcolor></control>
                            <control type="grouplist">
                                <left>0</left><top>40</top><width>860</width><height>420</height><itemgap>10</itemgap>
                                <include content="OnboardingEditRow"><param name="id" value="10001"/><param name="label" value="Host Base URL"/></include>
                                <include content="OnboardingEditRow"><param name="id" value="10002"/><param name="label" value="Instance UUID"/></include>
                                <include content="OnboardingEditRow"><param name="id" value="10003"/><param name="label" value="Password"/></include>
                                <control type="group"><width>860</width><height>70</height>
                                    <control type="label"><left>0</left><width>300</width><height>70</height><label>Behavior</label></control>
                                    <control type="button" id="10004"><left>310</left><width>500</width><height>60</height><label>show_streams</label><texturefocus border="20">buttons/focus.png</texturefocus></control>
                                </control>
                                <include content="OnboardingEditRow"><param name="id" value="10005"/><param name="label" value="Subtitles"/></include>
                                <control type="group" id="10007"><width>860</width><height>70</height>
                                    <control type="label"><left>0</left><width>300</width><height>70</height><label>UpNext</label></control>
                                    <control type="radiobutton" id="10006"><left>310</left><width>500</width><height>60</height><label>-</label><texturefocus border="20">buttons/focus.png</texturefocus></control>
                                </control>
                            </control>
                        </control>

                        <!-- Trakt Pane -->
                        <control type="group">
                            <width>860</width><height>180</height>
                            <visible>String.IsEqual(Container(10).ListItem.Property(type),trakt)</visible>
                            <control type="label"><width>860</width><height>40</height><font>font13_title</font><label>Trakt Configuration</label><textcolor>yellow</textcolor></control>
                            <control type="grouplist">
                                <left>0</left><top>40</top><width>860</width><height>140</height><itemgap>10</itemgap>
                                <include content="OnboardingEditRow"><param name="id" value="11001"/><param name="label" value="Client ID"/></include>
                                <include content="OnboardingEditRow"><param name="id" value="11002"/><param name="label" value="Client Secret"/></include>
                            </control>
                        </control>

                        <!-- YouTube Pane -->
                        <control type="group">
                            <width>860</width><height>250</height>
                            <visible>String.IsEqual(Container(10).ListItem.Property(type),youtube)</visible>
                            <control type="label"><width>860</width><height>40</height><font>font13_title</font><label>YouTube Configuration</label><textcolor>yellow</textcolor></control>
                            <control type="grouplist">
                                <left>0</left><top>40</top><width>860</width><height>210</height><itemgap>10</itemgap>
                                <include content="OnboardingEditRow"><param name="id" value="12001"/><param name="label" value="API Key"/></include>
                                <include content="OnboardingEditRow"><param name="id" value="12002"/><param name="label" value="API ID"/></include>
                                <include content="OnboardingEditRow"><param name="id" value="12003"/><param name="label" value="API Secret"/></include>
                            </control>
                        </control>

                        <!-- IPTV Pane -->
                        <control type="group">
                            <width>860</width><height>180</height>
                            <visible>String.IsEqual(Container(10).ListItem.Property(type),iptv)</visible>
                            <control type="label"><width>860</width><height>40</height><font>font13_title</font><label>IPTV Simple Configuration</label><textcolor>yellow</textcolor></control>
                            <control type="grouplist">
                                <left>0</left><top>40</top><width>860</width><height>140</height><itemgap>10</itemgap>
                                <include content="OnboardingEditRow"><param name="id" value="13001"/><param name="label" value="M3U URL"/></include>
                                <include content="OnboardingEditRow"><param name="id" value="13002"/><param name="label" value="EPG URL"/></include>
                            </control>
                        </control>

                        <!-- IMVDb Pane -->
                        <control type="group">
                            <width>860</width><height>110</height>
                            <visible>String.IsEqual(Container(10).ListItem.Property(type),imvdb)</visible>
                            <control type="label"><width>860</width><height>40</height><font>font13_title</font><label>IMVDb Configuration</label><textcolor>yellow</textcolor></control>
                            <control type="grouplist">
                                <left>0</left><top>40</top><width>860</width><height>70</height><itemgap>10</itemgap>
                                <include content="OnboardingEditRow"><param name="id" value="14001"/><param name="label" value="API Key"/></include>
                            </control>
                        </control>
                    </control>

                    <!-- Scrollbar (ID 60) -->
                    <control type="scrollbar" id="60">
                        <left>885</left><top>20</top><width>12</width><height>620</height>
                        <onleft>20</onleft><onright>9000</onright>
                        <orientation>vertical</orientation>
                    </control>
                </control>

                <!-- Right Side: Action Buttons (ID 9000) -->
                <control type="grouplist" id="9000">
                    <right>30</right>
                    <top>100</top>
                    <width>220</width>
                    <height>600</height>
                    <itemgap>20</itemgap>
                    <orientation>vertical</orientation>
                    <onleft>20</onleft>
                    <onright>10</onright>
                    <control type="button" id="9000">
                        <width>220</width>
                        <height>100</height>
                        <font>font13_title</font>
                        <label>INSTALL</label>
                        <align>center</align>
                        <texturefocus border="20">buttons/focus.png</texturefocus>
                    </control>
                    <control type="button" id="9001">
                        <width>220</width>
                        <height>100</height>
                        <font>font13_title</font>
                        <label>CANCEL</label>
                        <align>center</align>
                        <texturefocus border="20">buttons/focus.png</texturefocus>
                    </control>
                </control>

                <!-- Help Footer -->
                <control type="textbox">
                    <left>40</left>
                    <bottom>20</bottom>
                    <width>1520</width>
                    <height>60</height>
                    <font>font12</font>
                    <label>Select a category on the left to configure. When ready, click INSTALL on the right.</label>
                    <textcolor>grey</textcolor>
                    <align>center</align>
                </control>
            </control>
        </control>
    </controls>

    <include name="OnboardingEditRow">
        <param name="id" value="0"/>
        <param name="label" value="Setting"/>
        <definition>
            <control type="group">
                <width>860</width>
                <height>70</height>
                <control type="label">
                    <left>0</left>
                    <top>0</top>
                    <width>300</width>
                    <height>70</height>
                    <font>font12</font>
                    <label>$PARAM[label]</label>
                    <textcolor>white</textcolor>
                    <aligny>center</aligny>
                </control>
                <control type="edit" id="$PARAM[id]">
                    <left>310</left>
                    <top>5</top>
                    <width>540</width>
                    <height>60</height>
                    <font>font12</font>
                    <label>-</label>
                    <texturefocus border="5">buttons/focus.png</texturefocus>
                    <texturenofocus border="5" colordiffuse="40FFFFFF">colors/white.png</texturenofocus>
                </control>
            </control>
        </definition>
    </include>
</window>
